#declare SpecialKauCommands
  cmAttrib : {
    case MyEmployee of
      'С' : if (AddMode = 2) { MyEmployee := 'У'; AddMode := 0;}
            else AddMode := AddMode + 1;
      'У' : { MyEmployee := ''#0;AddMode := 3;}
!     'П' : MyEmployee := 'У';
      ''#0  : {MyEmployee := 'С'; AddMode := 0;}
    end; // case
    PersonsBounds;
    PersonsPosAndTitle;
    SavedMode := (SavedMode mod 4) + 1; // 1->2, 2->3, 3->4, 4->1
  }

