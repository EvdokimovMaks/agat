#ifndef __ExFpBudT_Vih__
#define __ExFpBudT_Vih__

#ifdef  ComponentVersion
#component "F_FpBudget"
#endif//ComponentVersion

//------------------------------------------------------------------------------
#doc
   Интерфейс взаимодействия : "Параметры редактирования бюджета"<br>
#end
ObjInterface iExtFpBudgetTitle;

//==============================================================================
//                                 INIT-DONE
//******************************************************************************
//------------------------------------------------------------------------------
#doc
   Инициализация параметров интерфейса<br>
#end
Function InitParam(
 _wBudMode   : word;  // режим запуска
                      // (_wBudMode and 1) =  0 - инициализация для редактирования
                      //                          бюджета
                      // (_wBudMode and 1) <> 0 - инициализация для просмотра
                      //        and               консолидированного бюджета
                      // (_wBudMode and 2) =  0 - с обычным заголовком
                      //
                      // (_wBudMode and 1) <> 0 - инициализация для просмотра
                      //        and               консолидированного бюджета
                      // (_wBudMode and 2) <> 0 - с заголовком для сохранения
                      //                          (Агрегированный бюджет)
 _wRunMode   : word;  // режим
                      // 0 - просто титл бюджета
                      // 1 - редактирование титла бюджета
 _cCurBudget : comp;  // бюджет
 _cCurBudVar : comp   // копия
) : boolean;

//==============================================================================
//                                 FIELDS
//******************************************************************************
//------------------------------------------------------------------------------
#doc
   Получить наименование бюджета
#end
Function GetBudName : string;

//------------------------------------------------------------------------------
#doc
   Получить стадию бюджета
#end
Function GetStage : string;

//------------------------------------------------------------------------------
#doc
   Получить наименование варианта бюджета
#end
Function GetBudVariantName : string;

//------------------------------------------------------------------------------
#doc
   Получить наименование копии бюджета
#end
Function GetBudVarName : string;

//------------------------------------------------------------------------------
#doc
   Получить режим бюджета
#end
Function GetBudMode : word;

//------------------------------------------------------------------------------
#doc
   Получить ссылку на бюджет
#end
Function GetBudget : comp;

//------------------------------------------------------------------------------
#doc
   Получить ссылку на копию бюджета
#end
Function GetBudVar : comp;

//------------------------------------------------------------------------------
#doc
   Установить ссылку на бюджет
#end
Function SetBudget(_Value : comp) : boolean;

//------------------------------------------------------------------------------
#doc
   Установить ссылку на копию бюджета
#end
Function SetBudVar(_Value : comp) : boolean;

