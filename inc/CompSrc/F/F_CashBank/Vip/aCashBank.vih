!-------------------------------------------------------------------------------
#doc
Функции для работы с таблицей разделов учета (CashBank).
#end
ObjInterface ObjCashBank;
  //----------------------------------------------------------------------------
  #doc
  Название раздела учета.
  #end
  function CashBank_GetName(_cCashBank: comp): tName;
  //----------------------------------------------------------------------------
  #doc
  Название раздела учета или набора документов.
  #end
  function GetNameByRazdel(_Razdel: word; _cCashBank: comp;
                           _isSmallName: boolean): tName;
  //----------------------------------------------------------------------------
  #doc
  По разделу и банку определяет раздел учета. <br>
  Перед вызовом необходимо проверять if iDocSet.OkManyTipDoc(_Razdel)
  #end
  function CashBank_ByPodr(_Razdel: word; _cPodr: comp): comp;
  //----------------------------------------------------------------------------
  #doc
  По типу документа пользователя возвращает раздел учета.
  #end
  function CashBank_ByTidk(_tidk: word): comp;
  //----------------------------------------------------------------------------
  #doc
  Ссылка на банк по разделу учета.
  #end
  function CashBank_GetBank(_Razdel: word; _cCashBank: comp): comp;
  //----------------------------------------------------------------------------
  #doc
  Раздел учета по умолчанию.
  #end
  function CashBank_GetDefault(_Razdel: word): comp;
  //----------------------------------------------------------------------------
  #doc
  Раздел учета по умолчанию (сначала поиск по валюте).
  #end
  function CashBank_GetDefaultByVal(_Razdel: word; _cVal: comp): comp;
  //----------------------------------------------------------------------------
  #doc
  Валюта по разделу учета.
  #end
  function CashBank_GetVal(_Razdel: word; _cCashBank: comp): comp;
  //----------------------------------------------------------------------------
  #doc
  Валюта по разделу учета. Для валютного расчетного счета проверка, чтобы была найдена валюта.
  #end
  function CashBank_GetValAndChech(_Razdel: word; _cCashBank: comp;
                                   var _cRetVal: comp): boolean;
  //----------------------------------------------------------------------------
  #doc
  Пользовательский тип документа по набору документов, разделу учета, типу документа.
  #end
  function UsersDoc_GetTidk(_Razdel: word; _cCashBank: comp;
                            _TidkGal:word):word;
  //----------------------------------------------------------------------------
  #doc
  По пользовательскому типу документа - возвращает набор документов, раздел учета и тип документа.
  #end
  function UsersDoc_GetByTidk(_Tidk: word;
                            var _Razdel: word;
                            var _cCashBank: comp;
                            var _TidkGal: word): boolean;
  //----------------------------------------------------------------------------
End;

#doc
