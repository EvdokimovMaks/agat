  #end
  function IsDocByRazdel(_Razdel: word): boolean;
  //----------------------------------------------------------------------------
End;

#doc
Расширение 2 объекта ObjCashBank
#end
ObjInterface ObjCashBank3;
  //----------------------------------------------------------------------------
  #doc
  Получение пользовательского типа для заданного системного в основном (первом) разделе учета.
  #end
  function GetMainTiDkUser(awTiDkGal: word): word;
  //----------------------------------------------------------------------------
End;

