const
  xlZeroValue =   '''0,00';
  xlPrintString = 0;
  xlPrintNumber = 1;
end;

#ifdef ComponentVersion
#Component "F_BuhRep"
#end

#doc
Объектный интерфейс для построения отчетов в Excel по шаблону
#end
ObjInterface ObjBuhRepXLS;

  #doc
  Вывод суммы. Значение равное нулю не выводит в полях типа double.
  #end
  Procedure PrintNotNull(FldName : string; Sum : double);

  #doc
  Печать итоговых сумм. Если ноль, то забиваем строку вместо числа.
  #end
  procedure PrintXLNumber (NameField: string; Number: double; NeedNumber: word);

  #doc
  Создает наименование поля и его значение в полях типа double
  #end
  Function CreateSetNumber(FldName : string; Sum : double) : boolean;

  #doc
  Создает наименование поля и его значение в полях типа double, нули не выводит
  #end
  Function CreateSetNumberNotNull(FldName : string; Sum : double) : boolean;

  #doc
  Создает наименование поля и его значение в полях типа date
  #end
  Function CreateSetDate(FldName : string; dDate : date) : boolean;

  #doc
  Создает наименование поля и его значение в полях типа string
  #end
  Function CreateSetStr(FldName, Str : string) : boolean;
end;

ObjInterface ObjBuhRepXLSEXT(ObjBuhRepXLS);
  #doc
  Создает наименование поля и его значение в полях типа string по настройке количества цифр после разделителя для количества
  #end
  procedure PrintXLKol (NameField: string; Number: double);
  #doc
  Вывод суммы. Значение равное нулю не выводит в полях типа double по настройке количество цифр после разделителя для количества
  #end
  Procedure PrintNotNullKol(FldName : string; Sum : double);
  #doc
  Создает наименование поля и его значение в полях типа double для количества
  #end
  Function CreateSetNumberKol(FldName : string; Sum : double) : boolean;

  #doc
  Создает наименование поля и его значение в полях типа string по настройке количество цифр после разделителя для сумм
  #end
  procedure PrintXLSum (NameField: string; Number: double);
  #doc
  Вывод суммы. Значение равное нулю не выводит в полях типа double по настройке количество цифр после разделителя для сумм
  #end
  Procedure PrintNotNullSum(FldName : string; Sum : double);
  #doc
  Создает наименование поля и его значение в полях типа double для сумм
  #end
  Function CreateSetNumberSum(FldName : string; Sum : double) : boolean;

  #doc
  формат вывода количества
  #end
  Function Kol_Pr : String;
  #doc
  формат вывода суммы
  #end
  Function Sum_Pr : String;

end;

VipInterface BuhRepXLS implements ObjBuhRepXLS,ObjBuhRepXLSEXT #Licensed_Free;
