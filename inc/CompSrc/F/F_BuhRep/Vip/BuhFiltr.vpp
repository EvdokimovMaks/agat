#ifndef _BuhFiltr_Inc_Included
#define _BuhFiltr_Inc_Included

type
  // Установка фильтров на сальдо, обороты. Может быть на что нить еще.
  BuhFilterRecord = record
    // Выбранные элементы основной и дополнительной части фильтров
    ModeSet1  : longint;
    ModeSet2  : longint;
    All4One   : word;
    cBankDocF : comp;       // настройка для печати книги проводок
    // План счетов
    cPlansSch : comp;
    mDas      : TNumPick;   // кол-во выбранных
    DASLevel  : word;       // уровень, на котором выбран ДАС
    wDas      : word;       // таблица ДАС
    cDas      : tKodKau;    // значение при одиночном выборе
    // Основной счет
    SchetO    : tSchet3;
    mSchetO   : TNumPick;
    dbSchetO  : tSchet19;
    SubOsSch  : tSubSch;
    mSubOsSch : TNumPick;        // Для множественного выбора
    cKauOs    : tGetKau;
    #ifdef Gal9_1
    mKauOs    : tTabmKau;
    #else
    mKauOs    : tTabKau;
    #end
    wKauOs    : tTabKau;
    BackKau   : word;             // обратный фильтр (битовая маска)
    KodSPO    : comp;
    mKodSPO   : TNumPick;        // Для множественного выбора
    BackPodr  : word;             // обратный фильтр
    // Корреспондирующий счет
    SchetK    : tSchet3;
    mSchetK   : TNumPick;
    dbSchetK  : tSchet19;
    SubSchK   : tSubSch;
    mSubSchK  : TNumPick;        // Для множественного выбора
    cKauKs    : tGetKau;
    #ifdef Gal9_1
    mKauKs    : tTabmKau;
    #else
    mKauKs    : tTabKau;
    #end
    wKauKs    : tTabKau;
    KodSPK    : comp;
    mKodSPK   : TNumPick;        // Для множественного выбора
    wBackSchK : word;                    // обратный фильтр по корсчету/субсчету
    // Прочие поля
    ViOb      : word;
    SodPr     : tSodPr;
    SodrMode  : word;
    HozDoc    : word;
    Descr     : tDescr;
    mDesGr    : TNumPick;        // Кол-во выбранных
    DesGr     : tDesGr;
    KodValut  : comp;
    cFilKor   : comp;
    cHozOper  : comp;
    cListGD   : comp;        // список групп дескрипторов
    RoundRule : word;
    SortMode  : word;        // параметры сортировки

    // для Excel-отчета
    ValutType    : longint;  // Битовая маска: суммы в НДЕ, Валюте, Валюте отчетов
    ColumnSet    : longint;  // Битовая маска: какие колонки показывать
    SeparateKau  : longint;  // уровни КАУ отображать в разных колонках
    XLTFileName  : string;   // файл шаблона
    NoDok        : string;   // Номер документа
    // И даты :)
    BegDate      : date;
    EndDate      : date;

    RepType      : byte;     // тип отчета: excel/plain text - для возврата при вызове BuhFiltr из Oborot

    // фильтр по статусам
    cStatus      : comp;
    mStatus      : longint;  // кол-во выбранных
  end;

#end // _BuhFiltr_Inc_Included
