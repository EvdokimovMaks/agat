#ifndef __GETNASTROS_VIH__
#define __GETNASTROS_VIH__

#ifdef ComponentVersion
#Component "F_OS"
#end
#doc
  Объект "Методы учета ОС/НМА"
#end
ObjInterface ObjPropertyNastrOS;
#doc
  Спозиционироваться на метод учета
#end
//------------------------------------------------------------------------------
// Методы
//------------------------------------------------------------------------------
  Procedure SetNastrOs(pcNastrOsNRec : comp);
//------------------------------------------------------------------------------
// Свойства
//------------------------------------------------------------------------------
  // наименование метода учета
  Property Name: string Read;
  //------------------------------------------------------------------------------
  // Алгоритм начисления амортизации по умолчанию
  // наименование
  Property NameOsAlg: string Read;
  // значение - ссылка
  Property CompOsAlg: comp Read;
  //------------------------------------------------------------------------------
  // План счетов бухгалтерского учета
  // наименование
  Property NamePlanSch: string Read;
  // значение - ссылка
  Property CompPlanSch: comp Read;
  //------------------------------------------------------------------------------
  // Хозоперация начисления амортизации по умолчанию
  // наименование
  Property NameHozOperAmort: string Read;
  // значение - ссылка
  Property CompHozOperAmort: comp Read;
  //------------------------------------------------------------------------------
  // Валюта метода учета
  // наименование
  Property NameKlVal: string Read;
  // значение - ссылка
  Property CompKlVal: comp Read;
  //------------------------------------------------------------------------------
  // Период начисления амортизации 
  // наименование
  Property sPeriodCalcAmort: string Read;
  // значение - признак
  Property wPeriodCalcAmort: word Read;
  //------------------------------------------------------------------------------
  //Признак учета общих стоимостных характеристик в групповых карточках
  Property TotalValue : boolean Read;
  //------------------------------------------------------------------------------
  //Признак разрешения начисления амортизации в любой месяц периода;
  Property CalcAmortAnyMonth : boolean Read;
  //------------------------------------------------------------------------------
  //Признак разрешения начисления амортизации по выбывшим ИК
  Property CalcAmortDropOutIK : boolean Read;
  //------------------------------------------------------------------------------
  //Признак расчета амортизации в следующем месяце для ИК поступивших/введенных
  //после указанного числа месяца вне зависимости от параметров алгоритма расчета
  Property AmortNextMonth : boolean Read;
  //Число месяца поступления/введенния ИК, после которого расчет амортизации
  // выполняется в следующем отчетном периоде ИК
  Property DayInputForAmortNextMonth : word Read;
  //------------------------------------------------------------------------------
  // Коэффициент индексации амортизационных отчислений в текущем месяце
  Property KIAO : double Read;
  //------------------------------------------------------------------------------
  // Признак применения коэффициента ускоренной амортизации
  Property SpeedUpAmort : word Read;
  //------------------------------------------------------------------------------
  //Правило округления износа основных средств
  // наимненование 
  Property NameRoundAmortRule : string Read;
  // значение-признак
  Property RoundAmortRule : word Read;
  // Точность округления износа основных средств
  Property PrecisionRoundAmortRule : double Read;
  //------------------------------------------------------------------------------
  //Правило округления при переоценке основных средств
  // наимненование 
  Property NameRoundPereocRule : string Read;
  // значение - признак
  Property RoundPereocRule : word Read;
  // Точность округления при переоценке основных средств
  Property PrecisionRoundPereocRule : double Read;
//------------------------------------------------------------------------------
end;

VipInterface GetPropertyNastrOS Implements ObjPropertyNastrOS Licensed (FREE)
;
#end // __NASTR_VIH__
