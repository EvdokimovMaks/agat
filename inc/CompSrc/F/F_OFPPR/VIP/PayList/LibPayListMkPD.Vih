Private ObjInterface oLibPayListMkPD( oFp_BaseAbstractEnt );

  //----------------------------------------------------------------------------
  #doc
     Разрешено ли создавать платежные документы из заявок
  #end
  Function CanMakePDFromDocReq : boolean;

  //----------------------------------------------------------------------------
  #doc
     Запуск формирования платежных документов по списку спецификаций реестров платежей
  #end
  Function RunMakePDBySpPayList(
    _MID      : LongInt;   // список спецификаций реестров платежей
    _wMessage : word       // режим выдачи сообщений
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Запуск формирования платежных документов по списку реестров платежей
  #end
