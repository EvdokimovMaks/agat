    _MID      : LongInt;   // список реестров платежей
    _wMessage : word       // режим выдачи сообщений
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Запуск формирования платежных документов по заявке
  #end
  Function RunMakePDBySingleDocReq(
    _cRec     : comp   ;   // заявка
    _wMessage : word       // режим выдачи сообщений
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Запуск привязки платежного документа к заявке
  #end
  Function RunAddPDBySingleDocReq(
    _cRec     : comp   ;   // заявка
