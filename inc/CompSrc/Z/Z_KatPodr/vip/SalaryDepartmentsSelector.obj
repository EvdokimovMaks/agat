#ifndef _SALARYDEPARTMENTSSELECTOR_OBJ_INCLUDED_
#define _SALARYDEPARTMENTSSELECTOR_OBJ_INCLUDED_

#component "Z_KatPodr"

#doc
Выбор зарплатного подразделения
#end
ObjInterface ISalaryDepartmentsSelector;

  #doc
  Инициализация интерфейса выбора зарплатного подразделения
  #end
  function Run(
               #doc
                  режим работы интерфейса<br>
                  p - установить текущее подразделение, заполнить базу текущих лицевых счетов и выйти<br>
                  1 - выбрать текущее подразделение и 0<br><br>

                  2 - выбрать подразделение ничего не изменяя<br>
                  5 - выбрать подразделение (+ пункт "Все подразделения")<br>
                  6 - выбрать подразделение без учета разграничения прав доступа<br><br>

                  10 - пересканировать текущие лицевые счета помеченных подразделений<br>
                  11 - пометить несколько подразделений и пересканировать текущие лицевые счета
               #end
               prChange: comp;
               
               #doc
               nRec текущего подразделения
               #end
               prCex: tNrec;

               #doc
               валидатор подразделения
               #end
               DepartmentValidator: IDepartmentValidator;
               
               #doc
               Для задания даты начала при пересканированиии текущих лицевых
               счетов за прошлый период или наложении фильтра по цеху отнесения затрат
               #end
               date1: date;
               
               #doc
               Для задания конечной даты периода пересканирования при наложении фильтра
               по цеху отнесения затрат
               #end
               date2: date;
               
               #doc
               опции-настройки работы интерфейса выбора зарплатных подразделений<br>
               битовый флаг - longint - 4 байт = 32 опций
               #end
               options: longint
               ): boolean;

End;


#end
