#ifndef _WTCHANGES_INCLUDED_
#define _WTCHANGES_INCLUDED_

#include WTCONTAINER.VIH // описание obj-интерфейса "Контейнер для данных табеля"

#ifdef ComponentVersion
  #component "Z_WT"
#end

#doc
  Объектный интерфейс браузера переходов в межпериод; используется в окне
  редактирования табеля учета рабочего времени.
#end
objinterface IWTChanges;

  #doc
    Настраивает браузер на просмотр переходов лицевого счета APersonalAccount в
    течение месяца AChangeMonth года AChangeYear.
  #end
  function LinkTo(APersonalAccount: comp; AChangeMonth: byte; AChangeYear: word): boolean;

  #doc
    Событие генерируется браузером после выбора пользователем (нажатие клавиши
    <Enter>) перехода Change; в Selected передается признак того, был ли данный
    переход выбран ранее.
  #end
  event function OnChangeSelected(Change: comp; Selected: boolean): boolean;
end;

vipinterface WTChanges implements IWTChanges, IWTContainerItem
#ifdef ATL51
  licensed (free)
#end
;

#end