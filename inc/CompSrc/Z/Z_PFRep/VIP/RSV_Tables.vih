table struct tp_LsSZV
(
  nRec       : tNrec
 ,cLsch      : tNrec
 ,cRec_DOLS  : tNrec
 ,tPerson    : tNrec
 ,cPodr      : tNrec
 ,wPrCorr    : word
 ,wPerCorr   : word    // период, за который корректируются сведения
 ,wYearCorr  : word    // год, за который корректируются сведения
 ,RegNomCorr : string  // Регистрационный номер в корректируемом периоде.
 ,wLgot      : word
 ,wNegSum    : word    // признак наличия отрицательной суммы
 ,TabN       : tabnStr // Табельный номер
 ,FIO        : s60     // Фамилия, Имя, Отчество
 ,SumVzn     : double
 ,VznM       : array [1..3] of double
 ,NumPack    : longInt
 ,SumV       : double
 ,SumVB      : double
 ,SumVznD    : double
) with index
(
  tp_LsSZV01 = nRec (Unique, Surrogate)
 ,tp_LsSZV05 = cLsch      + wPrCorr   + wPerCorr + wYearCorr
 ,tp_LsSZV06 = wPrCorr    + wLgot     + FIO
 ,tp_LsSZV07 = wPrCorr    + wLgot     + TabN
 ,tp_LsSZV09 = NumPack
 ,tp_LsSZV10 = wPrCorr    + NumPack   + FIO
 ,tp_LsSZV11 = wPrCorr    + NumPack   + TabN
 ,tp_LsSZV12 = cLsch      + cRec_DOLS + wPrCorr
 ,tp_LsSZV08 = wPrCorr    + wLgot     + wPerCorr  + wYearCorr
 ,tp_LsSZV02 = wPrCorr    + wNegSum   + TabN
 ,tp_LsSZV03 = wPrCorr    + wNegSum   + FIO
);
