#ifndef _IPROTECTOR_OBJ_INCLUDED_
#define _IPROTECTOR_OBJ_INCLUDED_

#ifdef ComponentVersion
  #component "c_common"
#end

#doc
 Объектный интерфейс для установки/снятия режима "только чтение" в заданном
 контейнере
#end
objinterface IProtector;
  #doc
  связать с контейнером [, субконтейнером (окно/скрин/брауз/дерево)]
  #end
  procedure LinkTo(ContainerId: longint; SubContainerStr: string);
  #doc
  установить статус-строку для режима "только чтение" (по умолчанию sci1Esc)
  #end
  procedure SetProtectedStatusCtx(Value: longint);
  #doc
  установить (Value = true) или снять (Value = false) режим "только чтение"
  #end
  procedure SetProtected(Value: boolean);
end;

#end
