Table struct tpPB_PF      // таблица Продуктов Выпуска и ПФ
(
  nRec       : comp,
  wUse       : word,      // 0 - не выполнено разузлование и 1, если выполнено
  cPeriod    : comp,
  cIzgotov   : comp,
  wLevel     : word,
  wOU        : word,
  cOU        : comp,
  wPB        : word,
  cPB        : comp,
  cParty     : comp,
  dAmount    : double     // в производственной ЕИ
)
With Index
(
 tpPB_PF01 = Nrec(Unique, Surrogate),
 tpPB_PF02 = wUse + wLevel + cPeriod + cIzgotov + wOU + cOU + wPB + cPB + cParty,
 tpPB_PF03 = cPeriod
);

Table struct tpPB_PF_StZatr    // таблица сумм для ОУ по СЗ
(
  ctpPB_PF    : comp,
  cStZatr     : comp,
  dSumma      : double
)
With Index
(
 tpPB_PF_StZatr01 = ctpPB_PF + cStZatr
);


Table struct tpRasx       // таблица Расходов ресурсов
(
  nRec          : comp,
  ctpPB_PF      : comp,
  wBuy          : word,   // покупной или производимый ресурс
  wRes          : word,   // ресурс
  cRes          : comp,   //
  cParty        : comp,   // партия
  cEI           : comp,   // отпускная ЕИ, отражающая учетн, произв или реальную отпускную
  dAmount       : double
)
With Index
(
 tpRasx01 = Nrec(Unique, Surrogate),
 tpRasx02 = ctpPB_PF + wRes + cRes,
 tpRasx03 = ctpPB_PF + wBuy + wRes + cRes + cParty
);

Table struct tpRasx_StZatr    // таблица сумм по СЗ
(
  ctpRasx     : comp,
  cStZatr     : comp,
  dSumma      : double
)
With Index
(
 tpRasx_StZatr01 = ctpRasx + cStZatr
);


Table struct tpDvigRes    // таблица Движений ПФ
(
  ctpRasx      : comp,
  wVid         : word,    // Vx_Ostatok, IN_OPERATE, PROD_OPERATE
  cIzgotov     : comp,    // если IN_OPERATE, то от КОГО
  dAmount      : double   // в tpRasx.cEI
)
With Index
(
 tpDvigRes01 = ctpRasx + wVid
);

Table struct tpDvig_StZatr    // таблица сумм по СЗ для движений ПФ
(
  ctpRasx      : comp,
  wVid         : word,    // Vx_Ostatok, IN_OPERATE, PROD_OPERATE
  cStZatr      : comp,
  dSumma       : double
)
With Index
(
 tpDvig_StZatr01 = ctpRasx + wVid + cStZatr
);
