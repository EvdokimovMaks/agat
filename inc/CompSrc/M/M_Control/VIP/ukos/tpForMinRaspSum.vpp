// таблица ссылок
Table struct tpOldNew
(
  lNum : longint,
  cOld : comp,
  cNew : comp
)
With Index
(
 TpOldNew01 = cOld,
 TpOldNew02 = cNew,
 TpOldNew03 = lNum
);

Table struct tpLink
(
  cOldNew      : comp
)
With Index
(
 TpLink01 = cOldNew
);

Table struct tpEndMigr
(
  cCalc : comp,
  cReal : comp
)
With Index
(
 tpEndMigr01 = cCalc
);

// суммы в разрезе ресурсов
Table struct tpSumResurs
(
  wNew_Old  : word,
  wRes      : word,
  cRes      : comp,
  cBudjet   : comp,
  cStBudjet : comp,
  cSumBudj  : comp
)
With Index
(
 tpSumResurs01 = wNew_Old + wRes + cRes + cBudjet + cStBudjet
);

Table struct tpIterSum
(
  cSumBudj   : comp,
  wValue     : word,
  wException : word,
  cSxemaRas  : comp
)
With Index
(
 tpIterSum01 = cSumBudj + wValue + cSxemaRas
);

