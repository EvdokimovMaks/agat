.Procedure GetFioIn ( var Fior : string[100] ) ;
begin
   var  Posr     : Integer;
   var  Fam      : string[100];

{
  fior := trim(fior);
  posr := instr(' ',fior);
  if posr <> 0
  then
  {
     fam  := substr(fior,1,posr);
     fior := trim(substr(fior,posr,Length(fior)));
     posr := instr(' ',fior);
     if posr = 0 then posr := instr('.',fior);
     if posr = 0
        fior :=Fam+substr(fior,1,1)+'.';
     else
        fior :=Fam+substr(trim(substr(fior,1,posr)),1,1)+'.'+substr(trim(substr(fior,posr+1,Length(fior))),1,1)+'.';
  }
}
end.
