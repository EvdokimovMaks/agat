#ifndef __OIGPDI_VIH
#define __OIGPDI_VIH

#include oiGPSrv01.obj // установка/получение параметров расчета

#ifdef ComponentVersion
#component "M_GetPotr"
#end

ObjInterface oiGPDI; forward;

#doc
Объектный интерфейс "расчет потребностей: получение данных о документах"</brief>
#end
ObjInterface oiGPDI;

//******************************************************************************
#doc
 возвращает тип и ссылку изготовителя (<I>_wDept, _cDept</I>)</brief>
 <I>_tDoc, _cDoc</I> - ссылка на документ
 результат функции = 0, если найден, > 0 - иначе.
#end
  function GetDeptByDoc(_tDoc: word; _cDoc: comp; var _wDept: word;
                        var _cDept: comp): integer;

#doc
 возвращает тип и ссылку значения аналитики (<I>_wKAUCode, _cKAUVal</I>)</brief>
 <I>_tDoc, _cDoc</I> - ссылка на документ; cKAURole роль аналитики
 результат функции = 0, если найден, > 0 - иначе.
 если <I>_cDoc</I> = 0, то в TmpPotr список документов с типом <I>_tDoc</I> (=0 - все типы),
 обладающих свойствами, указанными в <I>_cKAURole, _wKAUCode, _cKAUVal</I>
 результат функции = 0, если в TmpPotr что-то попало, > 0 - иначе.
#end
  function GetAnValByDoc(_tDoc: word; _cDoc: comp; _cKAURole: comp;
                         var _wKAUCode: word; var _cKAUVal: comp): integer;

//******************************************************************************
#doc
реализация поиска наборов</brief>
#end
  function GetGPDIMS: oiGPDI;
#doc
реализация поиска спецификаций</brief>
#end
  function GetGPDIPS: oiGPDI;
#doc
реализация поиска маршрутов</brief>
#end
  function GetGPDITM: oiGPDI;

end; // oiGPDI

#endif  // __OIGPDI_VIH