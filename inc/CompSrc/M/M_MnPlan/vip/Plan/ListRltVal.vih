#component "M_MnPlan"

//******************************************************************************
// Типы данных

//------------------------------------------------------------------------------
// Структура для хранения связи между значениями
#ifndef __Def_TRecRltVal__
#define __Def_TRecRltVal__
#doc
 Структура для хранения связи между значениями</brief> <br>
 Поля: <br>
   Value_1 - Значение 1 <br>
   Value_2 - Значение 2 <br>
#end
Type TRecRltVal = record
  Value_1: s250; // Значение 1
  Value_2: s250; // Значение 2
End; // Type TRecRltVal = record
#endif

//******************************************************************************
// ObjInterface oiListRltVal
#ifndef __Def_OI_ListRltVal__
#define __Def_OI_ListRltVal__
#doc
 Описание интерфейса-объекта "Список связей между значениями"</brief>
#end
ObjInterface oiListRltVal;

//------------------------------------------------------------------------------
#doc
 Добавление в список</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   Порядковый номер <br>
#end
Function Add(ardRecRltVal: TRecRltVal): comp;

//------------------------------------------------------------------------------
#doc
 Очистка списка</brief> <br>
 Результат: <br>
   True, если успешно <br>
#end
Function Clear: boolean;

//------------------------------------------------------------------------------
#doc
 Удаление из списка</brief> <br>
 Параметры: <br>
   acNpp - Порядковый номер в списке <br>
 Результат: <br>
   True, если успешно <br>
#end
Function Del(acNpp: comp): boolean;

//------------------------------------------------------------------------------
#doc
 Поиск связи значений в списке</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   Порядковый номер в списке <br>
#end
Function Find(ardRecRltVal: TRecRltVal): comp;

//------------------------------------------------------------------------------
#doc
 Поиск связки для значения</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
   awFlVal      - Признак местоположения значения в связке (1 или 2) <br>
 Результат: <br>
   True, если успешно <br>
#end
Function FindRltByVal(var ardRecRltVal: TRecRltVal; awFlVal: word): boolean;

//------------------------------------------------------------------------------
#doc
 Получение первой записи</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   True, если запись найдена <br>
#end
Function GetFirstRltVal(var ardRecRltVal: TRecRltVal): boolean;

//------------------------------------------------------------------------------
#doc
 Получение последней записи</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   True, если запись найдена <br>
#end
Function GetLastRltVal(var ardRecRltVal: TRecRltVal): boolean;

//------------------------------------------------------------------------------
#doc
 Получение следующей записи относительно текущей позиции</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   True, если запись найдена <br>
#end
Function GetNextRltVal(var ardRecRltVal: TRecRltVal): boolean;

//------------------------------------------------------------------------------
#doc
 Получение предыдующей записи относительно текущей позиции</brief> <br>
 Параметры: <br>
   ardRecRltVal - Структура для хранения связи между значениями <br>
 Результат: <br>
   True, если запись найдена <br>
#end
Function GetPrevRltVal(var ardRecRltVal: TRecRltVal): boolean;

//------------------------------------------------------------------------------
#doc
 Переход на запись</brief> <br>
 Параметры: <br>
   acNpp - Порядковый номер в списке <br>
 Результат: <br>
   True, если успешно <br>
#end
Function GoToRec(acNpp: comp): boolean;

End; // ObjInterface oiListRltVal

VipInterface iListRltVal implements oiListRltVal Licensed(Free);

#endif
