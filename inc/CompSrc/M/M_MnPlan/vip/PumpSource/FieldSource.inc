Table STRUCT FieldSource "Поле доступных значений"
(
  SourceType    : word       "Признак строки, даты, аналитики и т.д.",
  wCode         : word       "Дополнительная классификация",
  isSpec        : word       "Признак спецификации",
  wField        : word       "Само поле",

  sName         : string     "Наименование информации"
)
With Index
(
  FieldSource01 = SourceType + wCode + isSpec,
  FieldSource02 = SourceType + wCode + wField
)
;

