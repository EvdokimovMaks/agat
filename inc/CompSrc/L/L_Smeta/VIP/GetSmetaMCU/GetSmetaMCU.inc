#ifndef _GetSmetaMCU_inc_
#define _GetSmetaMCU_inc_

const
  // Типы отображаемых при выборе объектов. Использовать в качестве параметра pTipObj при вызове GetSmetaMCU
  GSMCU_OBJ_TYPE_ANY    = 100; // показывать все объекты (строительство, ремонты)
  GSMCU_OBJ_TYPE_BUILD  = 0;   // показывать только объекты строительства
  GSMCU_OBJ_TYPE_REPAIR = 1;   // показывать только объекты ремонта

  // Режимы контроля остатков. Использовать в качестве параметра pOstMC при вызове GetSmetaMCU
  GSMCU_REMAINS_DONT_CHECK   = 0; // принудительно устанавливается режим без контроля остатков
  GSMCU_REMAINS_CHECK        = 1; // принудительно устанавливается режим контроля остатков
  GSMCU_REMAINS_CUSTOMIZABLE = 2; // режим определяется сохраненной настройкой и может быть изменен пользователем

  // Битовые маски режимов работы интерфейса (константы с префиксом GSMCU_MODE_).
  // Предназначены для установки значения параметра pRez интерфейса.

  // Режим работы по умолчанию. Применяется везде при выборе из смет в документах системы.
  GSMCU_MODE_DEFAULT = 00b;
  // Разрешен режим независимой пометки разделов/работ. Режим можно переключать в настройках интерфейса (Alt+B).
  // Режим используется при выборе из смет в планировании строительства.
  GSMCU_MODE_INDEPENDENT_MARK_PART_JOB_ALLOWED = 01b;
  // Принудительно установлен режим пометки только работ и их ресурсов. Пометка разделов недоступна.
  // Выключить данный режим в настройках интерфейса нельзя. Режим используется при выборе из смет в
  // планировании строительства.
  GSMCU_MODE_MARK_JOBS_ONLY = 10b;
end;

#endif
