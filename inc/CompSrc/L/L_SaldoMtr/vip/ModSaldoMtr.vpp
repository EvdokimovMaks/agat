#ifndef MODSALDOMTR_VPP
#define MODSALDOMTR_VPP

!--------------------------------------------------------------------------
! Удаление операции движения из сальдовых остатков
!--------------------------------------------------------------------------
Procedure DelSaldoMtr;
{
  oMtrCount.MtrCheckDocs (word(coSpOrder), SpOrder.nRec, SpOrder.VidOrder, true);
}
!--------------------------------------------------------------------------
! Добавление операции движения в сальдовые остатки
!--------------------------------------------------------------------------
Procedure AddSaldoMtr;
{
  oMtrCount.MtrCheckDocs (word(coSpOrder), SpOrder.nRec, SpOrder.VidOrder, false);
}

#end // MODSALDOMTR_VPP
