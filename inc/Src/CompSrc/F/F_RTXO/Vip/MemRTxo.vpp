 table struct memHozForm
  (
   cRTXONrec: comp,
   NumForm  : word,
   KeyForm  : string,
   Formula  : string,
   Name     : string,
   SkipKey  : char
  )
 with index
  (
   indnrec = cRTXONrec,
   memHozFormSort = cRTXONrec + NumForm
  );

