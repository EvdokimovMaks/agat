#Component "F_SFO"

#doc
Информация о компенсации
#end
ObjInterface ObjPayCompens;

  #doc
  Находит действующую на указанную дату компенсацию
  #end
  Function IsActiveCompens(cDocNRec : comp; onDate : date = date(0,0,0)) : boolean;

  #doc
  Возвращает тип компенсации: 0 - фактически выплаченная, 1 - планируемая
  #end
  Function GetCompensState : word;

  #doc
  Возвращает количество компенсированных предметов
  #end
  Function GetCompensKol : word;

  #doc
  Возвращает дату следующей выдачи компенсированных предметов
  #end
  Function GetCompensDate : date;

  #doc
  Возвращает сумму выплаченной компенсации
  #end
  Function GetCompensSumma : tSumma;

  #doc
  Возвращает стоимость предмета на дату приказа о компенсации
  #end
  Function GetPredmStoim : tSumma;

  #doc
  Изменение компенсации при вставке PersSFO
  #end
  Procedure InsCrushCompens(cDocNRec : comp);

  #doc
  Изменение компенсации при изменении PersSFO
  #end
  Procedure UpdCrushCompens(cDocNRec : comp);

  #doc
  Изменение компенсации при удалении PersSFO
  #end
  Procedure DelCrushCompens(cDocNRec : comp);

end;

VipInterface PayCompens implements ObjPayCompens
  Licensed (Free)
  Parameters (pCommand : word; pNRec : comp)
;
