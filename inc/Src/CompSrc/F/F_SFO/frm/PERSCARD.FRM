    3 : // Отчество
    {
      posFIO := Pos(' ', sFIO);

      if (posFIO = 0) // задана только фамилия
        GetNameFromFIO := '';
      else
      {
        tmpFIO := Trim(SubStr(sFIO, Pos(' ', sFIO) + 1, Length(sFio)));
        posFIO := Pos(' ', tmpFIO);

        if (posFIO = 0) // задана только фамилия и имя
