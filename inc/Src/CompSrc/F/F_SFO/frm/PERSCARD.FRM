    1 : // Фамилия
    {
      posFIO := Pos(' ', sFIO);
      GetNameFromFIO := SubStr(sFIO, 1, if(posFIO = 0, Length(sFIO), posFIO));
    }
  //----------------
    2 : // Имя
    {
      posFIO := Pos(' ', sFIO);

      if (posFIO = 0) // задана только фамилия
        GetNameFromFIO := '';
      else
