#ifndef __REPPARAMSTYPE__
#define __REPPARAMSTYPE__

Type TRepParamsRec = Record
// Настройки отчетов
  dFor           : date;       // Дата формирования
  dFrom          : date;       // Период формирования
  dTo            : date;       // ----------//----------
  curGrp         : comp;       // Группировка
  curSort        : word;       // Сортировка
  cSigners       : comp;       // Подписанты
  cPlansSch      : comp;       // План счетов

  isShort        : word;       // Вид отчета: краткий/полный
  isExpl         : word;       // Местонахождение спецоснастки/СФО
  Flags          : word;       // Доп. параметры формирования
  dFlags         : word;       // ----------//----------
  dopFlags       : word;       // ----------//----------
  fltInRep       : word;       // Выводить параметры фильтров
  fltFields      : string;     // Выводить выбранные поля
  RepFormat      : word;       // Тип отчета: Текст/Excel/FastReport
  SumFormat      : String[80]; // Формат отображения
  RoundRule      : word;       // Правила округления
  Precition      : double;     // Точность округления

// Фильтры
  fltNom         : comp;       // Фильтр по номенклатуре
  nmNom          : String[80]; // ----------//----------
  fltPod         : comp;       // Фильтр по подразделениям
  nmPod          : String[80]; // ----------//----------
  fltMol         : comp;       // Фильтр по МОЛ
  nmMol          : String[80]; // ----------//----------
  fltOrg         : comp;       // Фильтр по организациям
  nmOrg          : String[80]; // ----------//----------
  fltGrp         : comp;       // Фильтр по группам МЦ/СФО
  nmGrp          : String[80]; // ----------//----------
  fltCrd         : comp;       // Фильтр по личным карточкам учета спецоснастки/СФО
  nmCrd          : String[80]; // ----------//----------
  fltSrok        : word;       // Фильтр по сроку службы
  nmSrok         : word;       // ----------//----------
  fltVid         : word;       // Фильтр по виду движения
  nmVid          : string;     // ----------//----------
  fltSpis        : word;       // Фильтр по типу списания
  fltDrag        : comp;       // Фильтр по драгметаллам
  nmDrag         : String[80]; // ----------//----------
  fltNrm         : comp;       // Фильтр по нормам выдачи
  nmNrm          : String[80]; // ----------//----------
  fltMet         : comp;       // Фильтр по методикам списания
  nmMet          : String[80]; // ----------//----------
  fltPrSp        : comp;       // Фильтр по причинам списания
  nmPrSp         : String[80]; // ----------//----------
  fltInfo        : word;       // Фильтр по дополнительной информации
  nmInfo         : String[80]; // ----------//----------
  fltSchet       : word;       // Фильтр по балансовому счету
  fltClass       : comp;       // Фильтр по внешней классификации
  nmClass        : string;     // ----------//----------
end;

#end // __REPPARAMSTYPE__

#ifndef __REEDOCMBPTYPE__
#define __REEDOCMBPTYPE__

Type TReeDocMBPRec = Record
  dType    : word; // Тип документов для реестра
  frDate   : date; // Период формирования
  toDate   : date; // ----------//----------
  wFDocs   : word; // Включать: все документы/с СФО/без СФО
  wParam   : word; // Реестр со спецификацией/без
  fltPodF  : comp; // Фильтры: по подразделению "Откуда"
  fltMolF  : comp; //          по МОЛ "Откуда"
  fltPodT  : comp; //          по подразделению "Куда"
  fltMolT  : comp; //          по МОЛ "Куда"
  fltNom   : comp; //          по номенклатуре
  fltPrSp  : comp; //          по причине списания
  fltSrok  : word; //          по сроку службы
  wSrok    : word; //          ---------//---------
  VidRep   : word; // Формат отчета
  cSigners : comp; // Подписанты
end;

#end // __REEDOCMBPTYPE__

#ifndef __INVPARAMSTYPE__
#define __INVPARAMSTYPE__

Type TInvParamsRec = Record
// Настройки инвентаризационной описи
  pCommand       : word;       // Вызов из модуля Спецодежда
  dFor           : date;       // Дата формирования
  curGrp         : comp;       // Группировка
  curSort        : word;       // Сортировка
  cSigners       : comp;       // Подписанты

  wKind          : word;       // Вид предметов: спецоснастка/СФО
  isExpl         : word;       // Местонахождение спецоснастки/СФО
  dFlags         : word;       // Доп. параметры формирования
  wLines         : word;       // Количество пустых строк
  startNpp       : word;       // Первый порядковый номер предметов
  dPrikaz        : date;       // Дата приказа
  sPrikaz        : string;     // Номер приказа
  wColumns       : word;       // Выводить данные бух.учета
  VidStoim       : word;       // Выводить первоначальную/остаточную стоимость
  TipName        : word;       // Состав наименования предметов
  RepFormat      : word;       // Тип отчета: Текст/Excel/FastReport
  VidRep         : word;       // Вид отчета
  RoundRule      : word;       // Правила округления
  Precition      : double;     // Точность округления

// Фильтры
  fltNom         : comp;       // Фильтр по номенклатуре
  fltPod         : comp;       // Фильтр по подразделениям
  fltMol         : comp;       // Фильтр по МОЛ
  fltGrp         : comp;       // Фильтр по группам МЦ/СФО
  fltCrd         : comp;       // Фильтр по личным карточкам учета спецоснастки/СФО
  fltSrok        : word;       // Фильтр по сроку службы
  nmSrok         : word;       // ----------//----------
  fltClass       : comp;       // Фильтр по внешней классификации
end;

#end // __INVPARAMSTYPE__
