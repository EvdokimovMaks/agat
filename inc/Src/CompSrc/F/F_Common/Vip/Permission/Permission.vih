ObjInterface ObjPermisOborotProt;

  #doc
  Проверка, есть ли доступ ко всем проводкам документа
  #end
  Function GetProtectedForTXO(sMyDesGr : tDesGr; sMyDescr : tDescr;
                              dDateDoc : date; cNRecDoc, cNRecStatus : comp) : word;

end;

