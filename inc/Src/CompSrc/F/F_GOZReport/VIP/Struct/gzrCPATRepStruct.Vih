#ifndef __gzrCPATRepStruct_Vih__
#define __gzrCPATRepStruct_Vih__

#Component "F_GOZReport"

//------------------------------------------------------------------------------
#include gzr_BaseAbstractObj.Vih  // Абстрактный базовый интерфейс : "Object"
#include gzrModiRepStruct.Vih     // Библиотека функций : "Модификация структура отчета"
