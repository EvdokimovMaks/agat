//==============================================================================
#doc
Библиотека функций : "Расчет ПАТ формул структуры отчета"<br>
<b>Внимание!</b> Интерфейс предназначен только для внутреннего использования
#end
Private ObjInterface IgzrCPATRepStruct(Igzr_BaseAbstractObj);  //#region ObjInterface

  //----------------------------------------------------------------------------
  #doc
     Построить список позиций структуры отчета (по пути на заданную вершину)
  #end
  function BuildRepStructItemList(
    _ItemMID        : TPtr;     // ID списка позиций структуры отчета
    _cLevelNode     : comp;     // ссылка на вершину обрабатываемого уровня иерархии
    _isProcSubLevel : boolean   // признак: обрабатывать вложенные уровни
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Загрузить данные в ПАТ сервер
  #end
  function LoadDataToPAT(
    _ItemMID   : TPtr;     // ID списка позиций структуры отчета
    _PatServer : LongInt;  // ID ПАТ сервера
    _isUseGPDF : boolean   // использовать ли формулы получения данных ч/з ПАТ
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Получить данные из ПАТ сервера
  #end
  function GetDataFromPAT(
    _ItemMID   : TPtr;     // ID списка позиций структуры отчета
    _PatServer : LongInt;  // ID ПАТ сервера
    _isUseGPDF : boolean   // использовать ли формулы получения данных ч/з ПАТ
  ) : boolean;

End; //#endregion ObjInterface
//******************************************************************************


//==============================================================================
VipInterface gzrCPATRepStruct(gzr_BaseAbstractObj) implements IgzrCPATRepStruct
#Licensed_Free;
Public:
  constructor Init;
  constructor InitByModifier(
    _pModiRepStruct : IgzrModiRepStruct  // модификатор структура отчета
  );
  destructor  Done;
End;
//******************************************************************************


#endif//__gzrCPATRepStruct_Vih__
