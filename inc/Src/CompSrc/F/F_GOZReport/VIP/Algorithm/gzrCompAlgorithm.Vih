#ifndef __gzrCompAlgorithm_Vih__
#define __gzrCompAlgorithm_Vih__

#Component "F_GOZReport"

//------------------------------------------------------------------------------
#include gzr_BaseAbstractObj.Vih  // Абстрактный базовый интерфейс : "Object"
//------------------------------------------------------------------------------

//==============================================================================
#doc
Библиотека функций : "Комплексные алгоритмы расчета"<br>
<b>Внимание!</b> Интерфейс предназначен только для внутреннего использования
#end
Private ObjInterface IgzrCompAlgorithm(Igzr_BaseAbstractObj);  //#region ObjInterface

  //----------------------------------------------------------------------------
  //#region ЭКСПОРТ АЛГОРИТМОВ В ФАЙЛ
  //----------------------------------------------------------------------------
  #doc
     Экспортировать первичный алгоритм в файл
  #end
  function ExportPrimaryAlgToFile(
    _cRec      : comp;    // ссылка на алгоритм
    _sFilePath : string   // путь на файл
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Экспортировать комплексный алгоритм в файл
  #end
  function ExportComplexAlgToFile(
    _cRec      : comp;    // ссылка на алгоритм
    _sFilePath : string   // путь на файл
  ) : boolean;

  //----------------------------------------------------------------------------
  #doc
     Событие экспорта строки комплексного алгоритма в файл
  #end
  Event procedure Event_ExportComplexAlgStr(
  var _sStrAlg : string   // строка алгоритма
  );
  //#endregion ЭКСПОРТ АЛГОРИТМОВ В ФАЙЛ
  //----------------------------------------------------------------------------

  //----------------------------------------------------------------------------
  //#region СЕРВИС
  //----------------------------------------------------------------------------
  #doc
     По номеру строки комплексного алгоритма, получить ссылку на первичный алгоритм и его строку
  #end
  function GetPrimeAlgByComplexAlgLineNpp(
  var _lineNpp : LongInt  // номер строки алгоритма
  ) : comp;               // ссылка на первичный алгоритм
  //#endregion СЕРВИС
  //----------------------------------------------------------------------------

  //----------------------------------------------------------------------------
  //#region DIALOG
  //----------------------------------------------------------------------------
  #doc
     Запустить редактирование комплексного алгоритма
  #end
  function RunEditComplexAlg(
    _wIntMode  : word;    // режим запуска (cgiNo, cgiPick, ...) см.GLOCONST.INC
    _cRec      : comp     // ссылка на алгоритм
  ) : boolean;
  //#endregion DIALOG
  //----------------------------------------------------------------------------

End; //#endregion ObjInterface
//******************************************************************************


