#ifndef __CashFlow_Monitoring_DetailsTable__
#define __CashFlow_Monitoring_DetailsTable__

//------------------------------------------------------------------------------
// Таблица оперативного планирования
table struct CashFlowDetailsTbl
(
  cMain          : comp    "Ссылка на главную запись",
  DealingDate    : date    "Дата",
  cVal           : comp    "Валюта",
  Sum            : double  "Сумма",
  IsClosedPeriod : boolean "Закрыт ли период"
)
with index
(
  ByCMainDate = cMain + DealingDate
)
;

//------------------------------------------------------------------------------
// Информация об используемых значениях показателей
table struct AllDaysInReport
(
  dDate : date   "Дата",
  sName : string "Наименование даты"
)
with index
(
  BydDate = dDate
)
;

#endif // __CashFlow_Monitoring_DetailsTable__
