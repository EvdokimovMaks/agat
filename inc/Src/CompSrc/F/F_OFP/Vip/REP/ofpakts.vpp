      if (RunInterface('GetRepSort', nReport, 1, UserDeskRep.ResComp[19]) <> cmCancel)
      {}
      // Пир 102.42831 - обновлять настройку группировки (сортировки) сразу
      set UserDeskRep.ResComp[19] := UserDeskRep.ResComp[19];
