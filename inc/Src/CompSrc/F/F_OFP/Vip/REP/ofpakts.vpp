// получение имени поля по аналитике (нет/одиночный выбор/множественный)
Function Field_SetName(_FltPos: word; _wKau: word): string;
{
  var numRecords : word;
  numRecords := Filter_GetWord(_FltPos);

  case _wKau of
    cFld_KatNotes,
    cFld_AktSum,
    wFld_Prior,
    wFld_KatDoc:
    {
      Result := Filter_GetName(numRecords, piFunOFP.GetName(_wKau, Filter_GetComp(_FltPos)));
    }
    cgPos_PlatMean:
    {
      Result := if(UserDeskRep.ResWord[cgFilter_PlatMean] = 0, 'по всем платежным средствам', 'по выбранным платежным средствам');
    }
  else
      Result := Filter_GetName(numRecords, #ShowKau(_wKau, UserDeskRep.ResComp[20 + _FltPos]));
  end;
}

