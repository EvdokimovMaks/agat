Create View vwOFPAktSet
Var
  #ifdef _OFPJSET_
  //ПАРАМЕТРЫ
  parModel : comp;       // принимаем - модель
  #end
  //ВНУТРЕННИЕ
  nReport   : word;      // номер отчета
