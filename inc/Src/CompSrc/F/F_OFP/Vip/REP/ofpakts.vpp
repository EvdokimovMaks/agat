  nDateLevel: word;     // уровень, на котором дата

  fPeriodName : string; // 'Фильтр'

  ParFiltr1,
  ParFiltr2 : word;

As select
  UserDeskRep.ResComp[8] <> 0
   (FieldName = isPeriods)
, UserDeskRep.ResName[1]
    (FieldName = GroupContent)
, iCase(UserDeskRep.ResWord[cgPos_Kassa]; '< все платежные средства >', Kassa.Name; 'множественный выбор (' + UserDeskRep.ResWord[cgPos_Kassa] + ')')
    (FieldName = fKassa)
, iCase(UserDeskRep.ResWord[cgPos_Account]; '< все платежные средства >', Account.Name; 'множественный выбор (' + UserDeskRep.ResWord[cgPos_Account] + ')')
    (FieldName = fAccount)
, iCase(UserDeskRep.ResWord[cgPos_AccountV]; '< все платежные средства >', AccountV.Name; 'множественный выбор (' + UserDeskRep.ResWord[cgPos_AccountV] + ')')
    (FieldName = fAccountV)
, if (UserDeskRep.ResComp[cgPos_Security] = 0, '< все платежные средства >', #ShowKau(cgKau_AppVeks, UserDeskRep.ResComp[cgPos_Security]))
    (FieldName = fSecurity)
, if (UserDeskRep.ResComp[cgPos_Veksl] = 0, '< все платежные средства >', #ShowKau(cgKau_AppVeks, UserDeskRep.ResComp[cgPos_Veksl]))
    (FieldName = fVeksl)
#ifdef _OFPJSET_
, if (parModel <> 0
#else
, if (UserDeskRep.ResComp[6] <> 0
#end
, if(isValid(tnOFPModel), OFPModel.Name + ' (за период с ' + string(OFPModel.dStart) + ' по ' + string(OFPModel.dEnd) + ')', '< модель удалена >'), '< основное рабочее поле >')
    (FieldName = ModelName)
, if (isValid(tnAllIndexDS), AllIndexDS.Name, '< не проведена настройка >')
    (FieldName = DiapasonSumm)
, if (isValid(tnAllIndexCD), AllIndexCD.Name, '< не проведена настройка >')
    (FieldName = CatZadolj)
, if (isValid(tnAllIndexPZ), AllIndexPZ.Name, '< не проведена настройка >')
    (FieldName = prcZadolj)
, UserDeskRep_GetChosenVal(UserDeskRep.ResWord[6], UserDeskRep.ResComp[12])
    (FieldName = fRecValuta)
, if (fRecValuta = 0, sGetTune('NDE.NameRublAH'), if(isValid(tnKlValTree), KlValTree.DOLLARAH, ''))
    (FieldName = fValuta)
, if (UserDeskRep.ResComp[14] <> 0, fpTPerCur.Name, '< по датам >')
    (FieldName = fPeriodT)
, if (UserDeskRep.ResComp[8] <> 0, FpPeriodCur.Name, '< по всем периодам >')
    (FieldName = fPeriod)
, fPeriodT + if (UserDeskRep.ResComp[8] <> 0, ' (' + fPeriod +')', '')
    (FieldName = fPeriodNameBrws)
, UserDeskRep_GetColumnName()
    (FieldName = fFieldVisible)
From
  UserDeskRep
, FpPeriod
, OFPModel
, AllIndex AllIndexDS
, AllIndex AllIndexCD
, AllIndex AllIndexPZ
, CashBank Kassa
, CashBank Account
, CashBank AccountV
, KlVal    KlValTree
, fpTPer   fpTPerCur
, FpPeriod FpPeriodCur
, RepGrLst
, RepGrLst RepGrLst2
, PickRep
, fpTPer

Where
((
// настройка отчета
    UserName                == UserDeskRep.OwnName
and nReport                 == UserDeskRep.nRep
and UserDeskRep.ResComp[9]  == RepGrLst.nRec
and RepGrLst.nRec           == RepGrOne.cRepGrLst
and RepGrOne.cRec           == RepGroup.nRec
and RepGroup.nRec           == RepGrSrt.cRepGroup
and UserDeskRep.ResComp[19] == RepGrLst2.nRec // сортировка листьев
// фильтры
and UserDeskRep.ResComp[8]  == FpPeriodCur.NRec // периоды планирования
and UserDeskRep.ResComp[14] == fpTPerCur.NRec
#ifdef _OFPJSET_
and parModel                == OFPModel.NRec
#else
and UserDeskRep.ResComp[6]  == OFPModel.NRec
#end
// диапазоны сумм
and UserDeskRep.ResComp[11] == AllIndexDS.NRec
// категории задолженности
and UserDeskRep.ResComp[13] == AllIndexCD.NRec
// диапазоны задолженности
and UserDeskRep.ResComp[15] == AllIndexPZ.NRec
// валюта
and fRecValuta              == KlValTree.nRec
// ПС
and UserDeskRep.ResComp[cgPos_Kassa]    == Kassa.nRec
and UserDeskRep.ResComp[cgPos_Account]  == Account.nRec
and UserDeskRep.ResComp[cgPos_AccountV] == AccountV.nRec
))
;
