//******************************************************************************
// выбранная валюта
Function UserDeskRep_GetChosenVal( _nVal: word; _cDefinedVal: comp): comp;
{
  var ret: comp;
  case (_nVal) of
    // НДЕ
    cgOfpRepVal_Nde: ret := cgNRec0;
    // валюта отчетов
    cgOfpRepVal_Tar: ret := #(movalfunc)ValTar;
    // выбранная валюта
    cgOfpRepVal_Def: ret := _cDefinedVal;
    // сюда заходить не должно
  else
    ret := cgNRec0;
  end;

  UserDeskRep_GetChosenVal := ret;
}
