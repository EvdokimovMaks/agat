!-------------------------------------------------------------------------------
#doc
Обработка сальдо по форме 130 (Интерфейс доступа к таблице Saldo130).
#end
ObjInterface ObjSaldo130;
  //----------------------------------------------------------------------------
  #doc
  Получить сальдо (нал)
  #end
  function  GetSaldo(cForm, cPodr : tNRec; DateSal : date) : tSumma;
  //----------------------------------------------------------------------------
  #doc
  Получить сальдо (б/н)
  #end
  function  GetSaldoBN(cForm, cPodr : tNRec; DateSal : date) : tSumma;
  //----------------------------------------------------------------------------
  #doc
  Проверить наличие сальдо для дневника и если нету - создать
  #end
  procedure CheckSaldoForDiary(cDiary : tNRec);
  //----------------------------------------------------------------------------
  #doc
  Добавить Delta к сальдо
  #end
  procedure AddSaldo(cForm, cPodr : tNRec; DateSal : date; DeltaSaldo, DeltaSaldoBN : tSumma);
  //----------------------------------------------------------------------------
  #doc
  Добавить Delta к сальдо (по дневнику)
  #end
  procedure AddSaldoForDiary(cDiary : tNRec; DeltaSaldo, DeltaSaldoBN : tSumma);
