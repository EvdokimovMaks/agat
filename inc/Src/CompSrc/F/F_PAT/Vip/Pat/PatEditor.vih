#ifdef Atl51

#ifndef __PatEditor__vih__
#define __PatEditor__vih__

#ifdef ComponentVersion
#component "F_PAT"
#end

#doc
Редактор ПАТ - отчетов
#end
ObjInterface IPatEditor;

  #doc
  Показать окно не модально
  #end
  procedure _Show;

  #doc
  Показать окно модально
  #end
  procedure _ShowModal;

  #doc
  Открыть файл
  #end
  procedure Load  (aFileName : String);

  #doc
  Сохранить файл
  #end
  procedure _Save;

  #doc
  Перейти к строке и позиции
  #end
  procedure JumpTo(atLine, atPos: longint);

  #doc
  Заголовок окна
  #end
  property  Title : String Read Write;
end;

#doc
Проверка статуса Редактора ПАТ
#end
ObjInterface IPatEditorStatus;
  #doc
  Признак необходимости повторно вызвать редактор (нужно для перечитки файла)
  #end
  function NeedReopen : boolean;
end;

#doc
Получение информации о сервере расчетов.
#end
ObjInterface IPatRepInfo;
  function GetPatRep : longint;
  function GetSiServ : longint;
  function GetFServ  : longint;
end;

#doc
Редактор ПАТ отчетов.
#end
VipInterface PatEditor implements IPatEditor, IPatEditorStatus, IPatRepInfo Licensed(Free);
  public:
    #doc
    Конструктор по умолчанию.
    #end
    constructor Init;

    #doc
    Конструктор с указанием файла, заголовка и режима.
    #end
    constructor InitWithFile(aFileName, aTitle : string; wPickMode : word);

    #doc
    Деструктор.
    #end
    destructor  Done;
end;

#end // __PatEditor__vih__

#end // Atl51
