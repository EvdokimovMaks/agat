#ifndef _HashAnTools_Included_
#define _HashAnTools_Included_

#ifdef  ComponentVersion
#component "F_FpHashAn"
#endif//ComponentVersion

#include GrKAU.inc

//------------------------------------------------------------------------------
#doc
Библиотека функций администрирования сущности HashAn
#end
ObjInterface iHashAnTools;

//------------------------------------------------------------------------------
#doc
   Имеются ли хэши по группе аналитик
#end
Function HashUsedSloj (buf_Sloj : TSloj;
                       MsgMode : word) : boolean;

//------------------------------------------------------------------------------
#doc
   Можно ли вставлять записи SpSloj данного Sloj
#end
Function HashSpSloj_IsIns (
  buf_Sloj    : TSloj;
  MsgMode     : word
) : boolean;

//------------------------------------------------------------------------------
#doc
   Добавление записи в SpSloj (вызывается после физического добавления записи
   в SpSloj и пересчета нумерации в остальных SpSloj данного Sloj)
#end
Function HashSpSloj_Ins (buf_SpSloj : TSpSloj;
                         MsgMode : word; VisMode : word) : boolean;

//------------------------------------------------------------------------------
#doc
   Можно ли удалять записи SpSloj данного Sloj
#end
Function HashSpSloj_IsDel (
  buf_Sloj    : TSloj;
  MsgMode     : word
) : boolean;

//------------------------------------------------------------------------------
#doc
   Удаление записи SpSloj (вызывается до физического удаления записи из SpSloj,
   после удаления нумерация в SpSloj данного Sloj будет пересчитана без доп. уведомления)
#end
Function HashSpSloj_Del (
  buf_SpSloj  : TSpSloj;
  MsgMode     : word;
  VisMode     : word
) : boolean;

//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
end;


VipInterface HashAnTools implements iHashAnTools
#Licensed_Free;
Public:
  Constructor Init;
  Destructor  Done;
End;

#endif // _HashAnTools_Included_
