#ifndef __SHOZFND_VPP__
#define __SHOZFND_VPP__

type TSoprHozFind = record
       ModeSet    : integer;  //     ограничения, которые должны быть включены (константы maskXXXX)
       DisableSet : integer;  //     ограничения на доступ к параметрам (константы maskXXXX)
       nDoc       : string;   // 1)  номер документа
       DesGr      : string;   // 4)  -> var_vips.vpp
       Descr      : string;   // 8)  -> var_vips.vpp
       IsOborot   : word;     // 16) наличие оборотов (condition)
       StatDoc    : boolean;  // 32) статус документа
       KatNazna   : comp;     // 64) назначение документа
       SoprHoz    : comp;     // 128)связанные документы
       SoprDocType: word;
       SoprDocPar2: word;
     end;

     const
        maskNDocF        = 1; // константы для Find.ModeSet
        maskHozOperF     = 2;
        maskDesGrF       = 4;
        maskDescrF       = 8;
        maskIsOborotF    = 16;
        maskStatDocF     = 32;
        maskKatNaznaDocF = 64;
        maskSoprDocF     = 128;
        maskKatOrgF      = 256;
        maskOnlyMarked   = 512;
     end;

#endif //__SHOZFND_VPP__
