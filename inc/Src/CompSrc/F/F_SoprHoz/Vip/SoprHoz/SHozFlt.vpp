#ifndef __SHOZFLT_VPP__
#define __SHOZFLT_VPP__

type TSoprHozFilter = record
       ModeSet    : integer;      //     ограничения, которые должны быть включены (константы maskXXXX)
       DisableSet : integer;      //     ограничения на доступ к параметрам (константы maskXXXX)
       TidkGal    : word;         // 1)  тип документа системный
       SysOper    : word;         //     код операции (ОС, НМА, Производство, Автотранспорт)
       TipDoc     : word;         //     тип документа пользовательский (касса, банк, фро)
       HozOper    : comp;         // 2)  фильтр на привязку TXO
       DesGr      : string[4];    // 4)  -> var_vips.vpp
       Descr      : string[20];   // 8)  -> var_vips.vpp
       BegDate    : date;         // 16) -> var_vips.vpp
       EndDate    : date;         //     -> var_vips.vpp
       IsOborot   : word;         // 32) фильтр на наличие оборотов (condition)
       NoDoc      : string[20];   // 64) Фильтр на номер документа
       CurOrg     : comp;         // 128) Фильтр на организацию
       LoadFlag   : word;         //     флаг "устанавливать ограничения при загрузке интерфейса"
       isMBPKind  : word;         // спецодежда/сепцостнастка
end;

     const
        maskTipDoc   = 1;        // константы для Filter.ModeSet
        maskHozOper  = 2;
        maskDesGr    = 4;
        maskDescr    = 8;
        maskDate     = 16;
        maskIsOborot = 32;
        maskNoDoc    = 64;
        maskCurOrg   = 128;
     end;

#endif //__SHOZFLT_VPP__
