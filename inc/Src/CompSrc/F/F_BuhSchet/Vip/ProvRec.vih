#ifndef _ProvRec_Vih_
#define _ProvRec_Vih_

#ifdef ComponentVersion
#Component "F_BuhSchet"
#end

#doc
Интерфейс для встраивания окна редактирования допустимой корреспонденции
#end
ObjInterface ObjProvRec;
  #doc
  Активизация окна настройки допустимой корреспонденции
  #end
  procedure CurWinActivate;
  #doc
  Установка текущих ограничений на данные
  #end
  function  SetCurBounds(cPlan:comp; Sch: tSchet3) : boolean;
End;

ObjInterface ObjProvRecEx1(ObjProvRec);
  #doc
  Установка текущих ограничений на данные
  #end
function  SetCurBoundsEx(cPlan:comp; Sch: tSchet3; SubSch: tSubSch) : boolean;
  #doc
  Проверка допустимости корреспонденции проводки
  #end
  function CheckProvRec(SchDeb : tSchet3;  // дебет
                        SubSchD: tSubSch;
                        SchKred: tSchet3;  // кредит
                        SubSchK: tSubSch;
                        PutMes : boolean   // выдать message для одной проводки
                       )       : boolean;

  #doc
  Выбор счета с учетом настройки допустимой корресподенции
  #end
  function GetBuhSchet( isKredit : boolean;     // выбор кредитового счета
                         TecPlan : comp;        // текущий план
                      var SchDeb : tSchet3;     // дебет
                      var SubDeb : tSubSch;
                     var SchKred : tSchet3;     // кредит
                     var SubKred : tSubSch
                      ) : boolean;
end;

ObjInterface ObjProvRecEx2(ObjProvRecEx1);
  #doc
  Выбор субсчета с учетом настройки допустимой корресподенции
  #end
function GetBuhSubSchet( isKredit : boolean;     // выбор кредитового счета
                       TecPlan : comp;        // текущий план
                    var SchDeb : tSchet3;     // дебет
                    var SubDeb : tSubSch;
                   var SchKred : tSchet3;     // кредит
                   var SubKred : tSubSch
                    ) : boolean;

end;

VipInterface ProvRec Implements ObjProvRec, ObjProvRecEx1, ObjProvRecEx2 #Licensed_Free parameters( myPlansNo : comp;   mySchet : tSchet3);

#endif
