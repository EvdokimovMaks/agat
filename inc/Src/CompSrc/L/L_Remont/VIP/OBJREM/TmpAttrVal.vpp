//------------------------------------------------------------------------------
// временная таблица в памяти для хранения значений внешних атрибутов
// для построения дерева по внешним атрибутам
//------------------------------------------------------------------------------
Table STRUCT TmpAttrValue
(
  Nrec     : comp
, cAttrNam : comp    // ссылка на наименование внешнего атрибута
, Name     : string  //
, cRec     : comp    // ссылка на ОР
, cRec1    : comp    //
)
With Index
(
  TmpAttrValue01 = NRec(Unique, Surrogate)
, TmpAttrValue02 = cRec
, TmpAttrValue03 = cRec1
, TmpAttrValue04 = Name + cAttrNam
);
