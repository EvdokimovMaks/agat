  sFIO1 := ''; sPost1 := ''; sFIO2 := ''; sPost2 := '';
  sFIO3 := ''; sPost3 := ''; sFIO4 := ''; sPost4 := '';
  sFIO5 := ''; sPost5 := ''; sFIO6 := ''; sPost6 := '';

  if not boGetTune('Doc.RunSign')
    Exit;

  // запрашивать подписантов для ТОРГ-12 и УПД только для расходных документов
  case wForm of
    7, 8:
    {
      var oSDfuns: SDfuns;
	
      case oSDfuns.GetVidSopr(накладная_нрек) of
        101
      , 102
      , 103
      , 106
      , 108
      , 110
      , 111
      , 551, 552, 522, 523
      , 600..607
        :
          Exit;
      end;
    }
  end;

  var cPers: comp; cPers := 0;

  var _WasRun: boolean;

  if not ReadMyDSK(_WasRun, 'GetPersSig' + string(wForm) + '_WasRun', TRUE)
    _WasRun := False;
  
  SaveMyDSK(True, 'GetPersSig' + string(wForm) + '_WasRun');

  if not _WasRun
    if (RunInterface('GetPersSign', wForm) <> cmDefault)
      Exit;
   
  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer1', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO1, sPost1);

  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer2', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO2, sPost2);

  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer3', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO3, sPost3);

  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer4', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO4, sPost4);

  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer5', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO5, sPost5);

  if (ReadMyDSK(cPers, 'GetPersSign' + String(wForm) + '_cPer6', TRUE))
    if (cPers <> 0)
      oPrnSoprFun.GetFIOPost(cPers, sFIO6, sPost6);
      
  case wForm of
    7, 8:
    {
      var sFeeSigners: string;

      if (ReadMyDSK(sFeeSigners, 'GetPersSign' + String(wForm) + '_sFeeSigners', TRUE))
        if (sFeeSigners <> '')
        {
          var iFeeSigners : FeeSigners;
          var cGrPodp     : comp;

          case wForm of
            7: // подписанты для УПД
            {
              iFeeSigners.InitFeeSignersExt   (cgReport_7403, false, false);
              iFeeSigners.FindFeeSignersByName(cgReport_7403, sFeeSigners);

              // Если установлена Группа
              if iFeeSigners.FeeSignersIsValid
              {
                cGrPodp := iFeeSigners.GetFeeSigners;

                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'За руководителя организации')
                {
                  sFIO1  := iFeeSigners.GetSignerFIO(1);
                  sPost1 := iFeeSigners.GetSignerPosition(1);
                }
                  
                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'За главного бухгалтера')
                {
                  sFIO2  := iFeeSigners.GetSignerFIO(1);
                  sPost2 := iFeeSigners.GetSignerPosition(1);
                }
                  
                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'Ответственный за правильность оформления факта хозяйственной жизни')
                {
                  sFIO3  := iFeeSigners.GetSignerFIO(1);
                  sPost3 := iFeeSigners.GetSignerPosition(1);
                }
              }
            }
            8: // подписанты для ТОРГ-12
            {
              iFeeSigners.InitFeeSignersExt   (cgReport_7404, false, false);
              iFeeSigners.FindFeeSignersByName(cgReport_7404, sFeeSigners);

              // Если установлена Группа
              if iFeeSigners.FeeSignersIsValid
              {
                cGrPodp := iFeeSigners.GetFeeSigners;

                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'За главного бухгалтера')
                {
                  sFIO2  := iFeeSigners.GetSignerFIO(1);
                  sPost2 := iFeeSigners.GetSignerPosition(1);
                }

                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'Отпуск разрешил (отпуск груза разрешил)')
                {
                  sFIO4  := iFeeSigners.GetSignerFIO(1);
                  sPost4 := iFeeSigners.GetSignerPosition(1);
                }

                if iFeeSigners.FindFeeSignersSubByName(cGrPodp, 'Сдал отправитель (отпуск груза произвел)')
                {
                  sFIO5  := iFeeSigners.GetSignerFIO(1);
                  sPost5 := iFeeSigners.GetSignerPosition(1);
                }
              }
            }
          end;
        }
    }
  end;
