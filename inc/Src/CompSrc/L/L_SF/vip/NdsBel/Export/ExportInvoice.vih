#ifndef __ExportInvoice_vih__
#define __ExportInvoice_vih__

#Component "L_SF"

Type
  TExpSF = record
    sOutDir   : string; // путь к каталогу обмена данными
    sXsdDir   : string; // путь к каталогу xsd-схем
    wType     : word;   // тип ЭСЧФ
    wDirect   : word;   // направление СФ
    cOrg      : comp;   // контрагент
    dataBeg   : date;   // фильтр по дате
    dataEnd   : date;   // фильтр по дате
    wExParam  : word;   // дополнительные параметры
    wExParam2 : word;   // дополнительные параметры
    wStatus   : integer;   // статус ЭСЧФ
  end;

#doc
Экспорт исходного счета-фактуры
#end
ObjInterface ObjExportInvoice;

  #doc
  Выгрузка содержимого документа в XML-формат
  #end
  Function Export(_TuneExp: TExpSF): longint;

  #doc
  Пакетная выгрузка документа в XML-формат
  #end
  Function ExportEx(ptrMarker: TPtr; cRec: comp = 0): longint;

End;

VipInterface ExportInvoice
  implements ObjExportInvoice
  licensed (FREE);

#end // __ExportInvoice_vih__
