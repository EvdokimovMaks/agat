ObjInterface ObjAltVarNames;

  #doc
  Получить альтернативное наименование по умолчанию
  #end
  function GetDefAltNameMC(lfwVidCatal : word;      //Тип каталога
                           lcRec       :tnRec): string;

  #doc
  Получить альтернативное наименование по варианту наименования
  #end     //GetVar
  function GetAltNameMC(lfwVidCatal : word;      //Тип каталога
                        lcRec       : tnRec;
                        lsName      : string)             : string;

  #doc
  Получить альтернативное наименование для позиции документа
  #end
  function GetAltNameMC_doc(   lfwVidCatal : word;      //Тип каталога
                               lcRec       : tnRec;
                               lwTypeDoc   : longint;
                               lcDoc       : tnRec;
                               lcSpecDoc   : tnRec)             : string;
  #doc
  Установить альтернативное наименование для позиции документа
  #end
  function SetAltNameMC_doc(    lfwVidCatal : word;      //Тип каталога
                                lcRec       : tnRec;
                                lwTypeDoc   : longint;
                                lcDoc       : tnRec;
                                lcSpecDoc   : tnRec;
                                lsAltName   : string  )         : boolean;

  #doc
  Выбрать альтернативное наименование для позиции документа
  #end
  function PickAltName(    lfwVidCatal : word;      //Тип каталога
                           lcRec       : tnRec;
                           lwTypeDoc   : longint;
                           lcDoc       : tnRec;
                           lcSpecDoc   : tnRec;
                           lsAltName   : string;
                           lsName      : string  )         : string;
