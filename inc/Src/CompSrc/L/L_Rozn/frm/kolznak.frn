! Отображение количества знаков после запятой в количестве согласно настройки
.function kolznakst(kol : double; kolzn : byte) : string;
begin
  kolzn--;

  kolznakst := PadCh('', ' ', kolzn - length(DoubleToStr(kol, '[|-]3666`666`666`666`666' + if(bGetTune('ROUND.KOLSIGN') = 0, '', '.')
             + PadCh('', '8', bGetTune('ROUND.KOLSIGN'))))) + DoubleToStr(kol, '[|-]3666`666`666`666`666' + if(bGetTune('ROUND.KOLSIGN') = 0, '', '.')
             + PadCh('', '8', bGetTune('ROUND.KOLSIGN')));
end.