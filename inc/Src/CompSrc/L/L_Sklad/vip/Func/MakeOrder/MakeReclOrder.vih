#ifndef _MAKERECLORDER_VIH_
#define _MAKERECLORDER_VIH_

#ifdef ComponentVersion
#component "L_Sklad"
#end

const
  // Битовые маски опций для параметра _options, регулирующие работу интерфейса.
  OPT_HIDE_REQUESTS_TO_USER = 1; // Скрывать сообщения/диалоги для запроса действий пользователя (используется для пакетных режимов)
  OPT_SUCCESS_INFO_TO_PROTO = 2; // Помещать в протокол информацию об успешном формировании ордеров, номера сформированных ордеров
end;

ObjInterface objMakeReclOrder;

#doc
Формирование складских ордеров по рекламационным документам.
#end
Function MakeOrders(
    _cSopr                : comp;    // #docl Ссылка на сопроводительный документ
    _options              : longint; // #docl Опции, регулирующие работу интерфейса. Задаются с помощью констант OPT_*, определенных в заголовочном файле интерфейса. Если ничего не устанавливаем - передать 0.
    _modeForMakeOrder     : word;    // #docl Параметр, возвращаемый ф-цией MakeOptionsByDefines (см. одноименный vpp).
    _paramForMakeOrder    : word;    // #docl Параметр, возвращаемый ф-цией MakeOptionsByDefines (см. одноименный vpp).
    _errProtocolFormHandle: TPtr;    // #docl Хэндл формы протокола ошибок, куда выводятся сообщения при проблемах во время формировании ордера.
    _dOrder               : date     // дата ордера
  ): boolean; // #docl возвращает true, если ордера успешно сформированы и false, если были проблемы при формировании ордеров (нужно смотреть протокол ошибок).

end;

VipInterface MakeReclOrder implements objMakeReclOrder
  Licensed(free);

#endif
