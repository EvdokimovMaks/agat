#doc
Объектный интерфейс "Статистическая информация для FOT"
#end

#component "Z_FOT"

objinterface oFOTStatis;

  // входные параметры
  property YearOtch: word read write;    //год, за который формируется отчет
  property Month2  : word read write;    //месяц, по который формируется отчет

  #doc
   Функция для подсчета среднесписочной численности на основании
     сформированной статистической информации
  #end
  Function GetSrednSpis:          double;

  #doc
   Функция для подсчета среднесписочной численности ЗА ОПРЕДЕЛЕННЫЙ ПЕРИОД
   на основании сформированной статистической информации
  #end
  Function GetSrednSpisForPeriod(MonBeg: word; MonEnd: word):    double;

  #doc
   Функция для определения списочной численности (общей, женщин, инвалидов, с вредными
   условиями - в зависимости от парамера) за заданный месяц по подразделению
   на основании информации, сформированной в  GetSrednSpisForPeriod
  #end
  Function GetSrSpisForPodr(Podr: comp; NumMonth: word; Parametr: integer): double;

  property SrednSpisWomen:        double read;
  property SrednSpisInv:          double read;
  property SrednSpisSpecial:      double read;
  property SrednSpisSpecialWomen: double read;
end;

objinterface oFOTStatis_1;
  #doc
   Процедура загрузки подразделений в таблицу PodrMark из маркера
  #end
  procedure LoadPodrMark;
end;

objinterface oFOTStatis_2;
  #doc
   Функция подсчета численности ивалидов
  #end
  function GetNumberOfInv( _wMonth : word ) : double;

  #doc
   Функция подсчета численности сотрудников, работающих во вредных условиях
  #end
  function GetNumberOfHarm( _wMonth : word ) : double;
end;

vipinterface FOTStatis implements oFOTStatis, oFOTStatis_1, oFOTStatis_2
  licensed(free);
