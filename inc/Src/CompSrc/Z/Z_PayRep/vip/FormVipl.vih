#ifndef _FormVipl_vih_INCLUDED_
#define _FormVipl_vih_INCLUDED_

#include ZarRegister.vih

#component "Z_PayRep"

//------------------------------------------------------------------------------
// Окно для настройки параметров формирования выплат
//------------------------------------------------------------------------------
vipinterface FormVipl parameters
    (
      TiDk:     word;     // тип формируемого документа (реестр/ведомость)
      WrkOrder: word;     // флаги обрабатываемых выплат
      WorkUp:   longint;  // дополнительные флаги
      WorkNRec: comp      // ссылка на переформируемый документ
    )
  licensed(free);

//------------------------------------------------------------------------------
// Интерфейс формирования реестров
//------------------------------------------------------------------------------
vipinterface FormRees
   implements
     IViplWorkParams
   parameters
    (
      LoaderMask: longint;   // флаги загружаемых документов
      DefaultSet: boolean;   // признак использования настроек по умолчанию
      CurNumDoc:  string     // номер, с которого надо начать нумерацию реестров
    )
  licensed(free);

//------------------------------------------------------------------------------
// Интерфейс формирования платежных ведомостей
//------------------------------------------------------------------------------
vipinterface FormPVed
  implements
    oPlVedParams
  parameters
  (
    LoaderMask: longint;   // флаги загружаемых документов
    DefaultSet: boolean;   // признак использования настроек по умолчанию
    CurNumDoc:  string     // номер, с которого надо начать нумерацию ведомостей
  )
  licensed(free);

#end
