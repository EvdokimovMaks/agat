#ifndef _ReesEnvironment_vih_INCLUDED_
#define _ReesEnvironment_vih_INCLUDED_

#component "Z_PayRep"

objinterface IPWEnvironment;
  #doc
    Настраивает браузер на просмотр данных по ссылке на владельца.
  #end
  procedure LinkTo(cDoc: comp);

  #doc
    Устанавливает режим редактирования (true) или просмотра (false)
  #end
  procedure SetEditMode(Value: boolean);

  #doc
    Перерисовывает содержимое браузера.
  #end
  procedure ReDraw;

  #doc
    Обновляет и перерисовывает содержимое браузера.
  #end
  procedure ReRead;

  #doc
    Возникает при изменении режима [редактирования/просмотра].
  #end
  event procedure OnNewMode(Value: boolean);

  #doc
    Возникает после обновления, удаления, обновления записи/группы записей.
  #end
  event procedure OnChanged;
end;

