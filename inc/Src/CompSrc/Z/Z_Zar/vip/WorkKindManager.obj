#ifndef _WorkKindManager_obj_INCLUDED_
#define _WorkKindManager_obj_INCLUDED_

#component "Z_Zar"

#doc
Редактирование и множественный выбор видов работ
#end
ObjInterface IWorkKindManager;

  #doc
  Запуск одиночного/множественного/"тихого" выбора или редактирования видов работ
  #end
  procedure Run(
                #doc
                Режим запуска интерфейса. Битовая маска - допускает комбинации некоторых параметров:
                здесь: vfCanSelect, vfMultipleSelection с vfCanEditObjects
                например: (vfMultipleSelection or vfCanEditObjects) - "множественный выбор
                с возможностью вызова режима редактирования классификатора"
                или: (vfCanSelect or vfCanEditObjects) - "одиночный выбор с возможностью
                вызова режима редактирования классификатора"<br><br><br>

                  vfCanSelect - одиночный выбор<br>
                  vfMultipleSelection - множественный выбор<br>
                  vfSilentlySelectAll - "тихая пометка" - пометить всё и свернуться<br>
                  vfCanEditObjects  - редактирование
                #end
                mode: word
               );

  #doc
  Установка специальных опций
  #end
  procedure SetSpecOptions(
                           #doc
                           sodlNoSpecOptions - сброс специальных опций<br>
                           sodldExptIntByWorker - исключать внутреннего совместителя (сист. код = 3)
                           #end
                           specOptions: longint
                          );

  #doc
  Указатель на маркер с выбранными видами работ
  #end
  function GetList: TPtr;

  #doc
  Попытка загрузить сохраненный ранее в DSK список выбранных видов работ
  #end
  function LoadList(importWorkKindList: TPtr): boolean;

  #doc
  Строка для поля фильтра по видам работ, содержащую информацию о выбранных видах работ
  #end
  function GetSelectionStr: string;

  #doc
  Количество выбранных видов работ
  #end
  function GetQuantity: longint;

  #doc
  Очистка выбранные виды работ
  #end
  procedure ClearAll;

  #doc
  Выбрано ли хоть что-нибудь
  #end
  function IsSomethingSelected: boolean;

End;

#doc
Чтение из dsk видов работ
#end
ObjInterface IWorkKindManager1;

  Procedure MakeList(sParamStrSovm: string; bParamMarkDef: boolean);

End;
#end
