#ifndef _OrderRaises_INCLUDED_
#define _OrderRaises_INCLUDED_

#ifdef ComponentVersion
#component "Z_StaffOrders"
#end

#doc
  Объектный интерфейс "Доплаты для реестра приказов"
#end
objinterface IOrderRaises;

#doc
  добавить к приказу по данному работнику (таблица ContDoc) доплату cRaise
#end
  Procedure AddRaise(cRaise, cContDoc: comp);

#doc
  удалить из приказа по данному работнику (таблица ContDoc) доплату cRaise
#end
  Procedure DelRaise(cRaise: comp);

#doc
  добавить к приказу по данному работнику (таблица ContDoc) доплату ставки cStaffStruct
#end
  Procedure AddVacancyRaise(cApp, cStaffStruct, cContDoc: comp);

#doc
  удалить из приказа доплаты по вакансии cStaffStruct
#end
  Procedure DelVacancyRaise(cStaffStruct, cContDoc: comp);

#doc
  добавить к приказу по данному работнику (таблица ContDoc) доплаты со спец. параметрами.
  Пока только для РПД-3
#end
  Procedure AddSpecRaise(cAppOld, cAppNew, cStaffStruct, cContDoc: comp);

#doc
  удалить из приказа по данному работнику (таблица ContDoc) доплаты со спец. параметрами.
  Пока только для РПД-3
#end
  Procedure DelSpecRaise(cContDoc: comp);

#doc
  показать окно текущих доплат
#end
  procedure ShowScreen(cContDoc: comp; ViewRegim: word);

end;

vipinterface OrderRaises
  implements IOrderRaises
    Licensed(Free)
;
#end

