#ifndef _StrPlus_vih_Included
#define _StrPlus_vih_Included

#component "Z_StaffReports"

#doc
Функция работы со строками которая в случае наличия в форме пустых полей добавляет " - "
#end
ObjInterface ObjStrFuncPlus;

  #doc
  Заменяет пустое поле прочерком
  #end
  procedure SkipMinus(id: TPtr; iCount: integer);

  #doc
  Заменяет пустое поле для дат форматом отличном от умолчания прочерком
  #end
  procedure WriteDateFormatMinus(id: TPtr; dateId: date);

  #doc
  Заменяет пустое поле для дат прочерком
  #end
  procedure WriteDateMinus(id: TPtr; dateId: date);

  #doc
  Заменяет пустое поле для целых значений прочерком
  #end
  procedure WriteCompMinus(id: TPtr; compId: comp);

  #doc
  Заменяет пустое поле для чисел с плавающей точкой прочерком
  #end
  procedure WriteDoubleMinus(id: TPtr; doubleId: double);

  #doc
  Заменяет пустое поле для строк прочерком
  #end
  procedure WriteStringMinus(id: TPtr; stringId: string);

end;

//------------------------------------------------------------------------------

VipInterface StringFunctionsPlus
  implements ObjStrFuncPlus
  Licensed (free);

#endif
