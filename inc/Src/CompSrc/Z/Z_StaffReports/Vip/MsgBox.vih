#ifdef ComponentVersion
  #component "Z_StaffReports"
#end

const
  MBOX_FT_NONE   = 0000b;
  MBOX_FT_BOLD   = 0001b;
  MBOX_FT_ITALIC = 0010b;
end

#doc
  Объектный интерфейс, для просмотра текстовой информации через Browse
#end
objinterface oMsgBox;

#doc
  Удалить всю ранее введенную информацию (все строки)
  Возвращаемое значение: true - информация успешно удалена
#end
public function funClearInform: boolean;

#doc
  Добавить одну строку в информацию
  Параметры:
   - intParam_NPP - порядковый номер, согласно которому будут выводиться добавленные строки
   - sParam_Inicator - показатель (первый столбец)
   - sParam_Value - значение показателя (второй столбец)
   - wParam_Type - тип строки информации, значение по умолчанию = 0
  Возвращаемое значение: nRec добавленной записи
#end
public function funAddInform(intParam_NPP: integer; sParam_Inicator: string; sParam_Value: string; wParam_Type: word = word(0)): comp;

#doc
  Установить формат ячеек
  Параметры:
   - cParam_nRec      - установить формат для строки сообщения по nRec
   - wParam_Stolb     - установить формат для _НОМЕРА_ столбца
   - wParam_FontType  - маска типа шрифта (константы MBOX_FT_*)
   - wParam_FontColor - цвет шрифта
   - wParam_BkColor   - цвет фона
#end
public procedure prSetFontFormat(cParam_nRec: comp; wParam_Stolb: word; wParam_FontType: word; wParam_FontColor: word; wParam_BkColor: word);

#doc
  Вывести на экран окно с информацией
  sParam_Title: 100 символов заголовка окна, если параметр не задан, то заголовок - "Информация"
#end
public procedure prOutBrowseMsg (sParam_Title: string[100] = 'Информация');
end;

#doc
  Расширение объектного интерфейса
#end
objinterface oMsgBox1;

#doc
  Вывести на экран окно с информацией
  sParam_Title: 100 символов заголовка окна, если параметр не задан, то заголовок - "Информация"
  sHelpParam: 100 символов контекстной справки
#end
public procedure prOutBrowseMsgWithHelp (sParam_Title: string[100] = 'Информация'; sHelpParam: string[100] = '');
end;

vipinterface iMsgBox implements oMsgBox, oMsgBox1
  Licensed(Free)
;
