#ifndef _FILTERCLSCHETBYCEXOZ_OBJ_INCLUDED_
#define _FILTERCLSCHETBYCEXOZ_OBJ_INCLUDED_

#component "Z_LSCHET"

#doc
Фильтр лицевых счетов по подразделению затрат. </brief>
Интерфейс содержит метод, принимающий в качестве параметра маркер с
подразделениями и временной интервал. Метод возвращает ссылки на лицевые счета
у которых найдены суммы с цехом отнесения затрат (cexoz) = подразделению из
маркера + сумма начислена (В или ЗА в зависимости от настройки) месяц,
попадающий в указанный временной интервал.
#end
objinterface IFilterCLschetByCexoz;

  #doc
  Генерируется при нахождении ссылки на лицевой счет
  #end
  event procedure ProcessCLschet(cLschet: tNrec);

  #doc
  Запуск поиска лицевых счетов </brief>
  Входные параметры:
    markerPodr - маркер с перечнем подразделений
    year - год
    monthBegin - месяц-начало диапазона
    monthEnd - месяц-конец диапазона
  #end
  procedure RunSearch(markerPodr: TPtr; yearParam: word; monthBegin: byte; monthEnd: byte);

end; //objinterface IFilterCLschetByCexoz;

objinterface IFilterCLschetByCexoz2;
  #doc
  Установка логики работы фильтра по цехам отнесения затрат
  #end
  procedure SetFilterMode(AMode: Byte);
end;

objinterface IFilterCLschetByCexoz3;
  #doc
  Запуск поиска лицевых счетов
  #end
  procedure RunSearch2(markerPodr: TPtr; yearParam: word; monthBegin: byte; monthEnd: byte;
                      ACheckSumma: longint; AFilterType: word);
end;

objinterface IFilterCLschetByCexoz4;
  #doc
  Запуск поиска лицевых счетов
  #end
  procedure RunSearch3(markerPodr: TPtr; dateB, dateE: date; ACheckSumma: longint; AFilterType: word);
end;

#end
