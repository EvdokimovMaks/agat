#component "z_lschet"

table struct stCurLSchetRep
  (
    NRec       : tNRec    "Номер записи"
    , LastUser   : s20      "LASTUSER"
    , LastTime   : Time     "LASTTIME"
    , LastDate   : Date     "LASTDATE"
    , FilialNo   : Longint  "FILIALNO"
    , FIO        : s60      "Фамилия, Имя, Отчество"
    , TabN       : tTabN    "Табельный номер"
    , Cex        : tCex     "Цех"
    , cLSchet    : tNRec    "NRec лицевого счета"
    , DatUv      : Date     "Дата увольнения"
    , SummaZ     : Double   "Сумма заработка"
    , StrTabn    : TabnStr  "строковое значение табельного номера"
    , tPerson    : tNrec    "Идентификатор работника"
    , Status     : Word     "Статус работника"
    , Sovm       : Word     "Вид работы"
    , StateLS    : s1       "Состояние лицевого счета"
    , PlanPay    : Date     "Плановая дата выплаты уволенному"
    , Tarif      : tSumma   "Тариф"
    , Rejim      : Word     "Режим работы"
    , DatPos     : Date     "Дата поступления"
    , Podr       : tNrec    "Вышестоящее подразделение"
    , CurPodrCS  : Longint  "Котрол. суммы фильтра по подразделениям"
    , CurFilter  : Word     "Тип текущего фильтра"
    , DatPayUvol : Date     "Дата выплаты уволенному"
    , Choice     : word     "выбор отчета"

  )
  with index
  (
    stCurLSchetRep01 = Choice + CEX + FIO,
    stCurLSchetRep02 = Choice + TABN + STRTABN + CLSCHET,
    stCurLSchetRep03 = Choice + CLSCHET,
    stCurLSchetRep04 = Choice + CEX + TABN + STRTABN + CLSCHET,
    stCurLSchetRep05 = Choice + SUMMAZ,
    stCurLSchetRep06 = Choice + CEX + FIO,
    stCurLSchetRep07 = Choice + FIO,
    stCurLSchetRep08 = Choice + DatPayUvol,
    stCurLSchetRep09 = Choice + DatUv
  );
