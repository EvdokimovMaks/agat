#ifndef _PickDeduction_vih_INCLUDED_
#define _PickDeduction_vih_INCLUDED_

#component "Z_Calc"

#doc
Объектный интерфейс выбора видов удержаний
#end
objinterface IPickDeduction;

  #doc
  Выбор одного вида удержания</brief>.
  <p>При вызове метода отображется окно выбора вида удержания.</p>
  <p>Если удержание было выбрано (окно выбора закрылось по событию cmDefault), его системный код записывается
  в возвращаемый параметр <code>_VidUdS</code>, иначе значение параметра не изменяется.</p>

  <p>Для ограничения перечня доступных для выбора видов удержаний используется параметр <code>_Option</code></p>
  #end
  function PickOne(var _VidUdS: word; _Option: word = 0): boolean;

  #doc
  Выбор перечня видов удержаний</brief>.
  <p>При вызове метода отображется окно выбора вида удержания с возможностью множественной пометки.</p>
  <p>Если удержания были выбраны (окно выбора закрылось по событию cmDefault), их системные коды
  записываются в маркер <code>_MarkerVidUdS</code>, иначе содержимое маркера не изменяется.</p>

  <p>Для ограничения перечня доступных для выбора видов удержаний используется параметр <code>_Option</code></p>

  <p>Размер элемента передаваемого в функцию маркера - 4 байта.</p>
  #end
  function PickMultiple(_MarkerVidUdS: TPtr; _Option: word = 0): boolean;

end;

vipinterface PickDeduction implements IPickDeduction licensed(free) parameters(Options, PrVidUd: word);

#end
