// Галактика 8.1 - базовая функциональность
// Объектный интерфейс враппера для функций управления транзакциями
//******************************************************************************
#ifndef _ITransaction_obj_INCLUDED_
#define _ITransaction_obj_INCLUDED_

#ifdef ComponentVersion
#component "c_common"
#end

#doc
  Объектный интерфейс враппера для функций управления транзакциями.
#end
objinterface ITransaction;
  #doc
    Начинает транзакцию.
  #end
  procedure Run;

  #doc
    Возвращает true, если транзакция активна.
  #end
  function IsActive: boolean;

  #doc
    Отменяет начатую транзакцию.
  #end
  procedure Cancel;

  #doc
    Возвращает true, если транзакция была отменена.
  #end
  function IsCancelled: boolean;
end;

#end
