#ifndef __IGalMailer_MailMessage__
#define __IGalMailer_MailMessage__

#component "C_MAILER"

#doc
  Объектный интерфейс для работы с методами COM-объекта GALMAILER.MailMessage.<br>
#end
ObjInterface IGalMailer_MailMessage;

#doc
  Инициализация COM-объекта GALMAILER.MailMessage.<br>
#end
procedure Init;

#doc
  Деинициализация COM-объекта GALMAILER.MailMessage.<br>
#end
procedure Done;

#doc
  Инициализация объекта для заполнения TMapiMessage.<br>
#end
procedure InitMailMessage;

#doc
  Деинициализация объекта для заполнения TMapiMessage.<br>
#end
procedure DoneMailMessage;

#doc
  Процедура устанавливает для письма список получателей.<br>
  _nRecipsCount - число получателей.<br>
  _lpRecips - указатель на список получателей.<br>
#end
procedure SetRecipients(_nRecipsCount, _lpRecips : longint);

#doc
  Процедура устанавливает для письма список присоединенных файлов.<br>
  _nFilesCount - число присоединенных файлов.<br>
  _lpFileDescs - указатель на список присоединенных файлов.<br>
#end
procedure SetFileDescs(_nFilesCount, _lpFileDescs: longint);

#doc
  Процедура устанавливает для письма отправителя.<br>
  _lpOriginator - отправитель.<br>
#end
procedure SetOriginator(_lpOriginator: longint);

#doc
  Процедура чистит тело письма.<br>
#end
procedure ClearMailBody;

#doc
  Процедура добавляет в тело письма строку.<br>
#end
procedure AddStrToMailBody(const lpStr: string);

#doc
  Процедура устанавливает тему письма.<br>
#end
procedure SetSubject(const lpSubject: string);

#doc
  Процедура устанавливает дату отправки.<br>
#end
procedure SetDateReceived(const lpDateReceived: string);

#doc
  Процедура возвращает указатель на сформировонное письмо.<br>
#end
function GetLHMailMessage: longint;
end;


VipInterface vGalMailer_MailMessage Implements IGalMailer_MailMessage
#ifdef ATL51
licensed(FREE)
#endif
