//'общая таблица в памяти для хранения складских и производственных остатков
Table Struct Mnf_TmpSaldo1
(
 NRec         : tNRec,
 cMC          : tNRec,
 cPodr        : tNRec,
 cMOL         : tNRec,
 cParty       : tNRec,
 cObj         : Comp,
 Kol          : Double,
 KolDop       : Double
)
With Index
(
 Mnf_TmpSaldo1_01 = Nrec(Unique, Surrogate),
 Mnf_TmpSaldo1_02 = cMC
);

//'общая таблица в памяти для хранения связей с остатками
Table Struct Mnf_TmpSaldoLink
(
 NRec         : tNRec,
 cPos         : tNRec,
 cMnPlan      : tNRec, // ПМт
 cSpMnPlanOwner : tNRec, // ПЗ
 cSpMnPlan      : tNRec, // ПМт
 cObjAcct     : tNRec,
 cTmpSaldo    : tNRec,
 KolDop       : Double
)
With Index
(
 Mnf_TmpSaldoLink_01 = Nrec(Unique, Surrogate),
 Mnf_TmpSaldoLink_02 = cPos,
 Mnf_TmpSaldoLink_03 = cTmpSaldo + cPos
);

//'общая таблица в памяти для хранения связей с серийными номерами
Table Struct Mnf_TmpCardSNLink
(
 NRec         : tNRec,
