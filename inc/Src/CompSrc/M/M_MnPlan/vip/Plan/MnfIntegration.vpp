 cMnPlan      : tNRec,
 cSpMnPlanOwner : tNRec, // ПЗ
 cSpMnPlan    : tNRec,
 cObjAcct     : tNRec,
 cCardSN      : tNRec
)
With Index
(
 Mnf_TmpCardSNLink_01 = Nrec(Unique, Surrogate),
 Mnf_TmpCardSNLink_02 = cPos,
