#ifdef ComponentVersion
#component "M_MnPlan"
#end
Table struct TmpDoc
  (
  Nrec         : tNRec,
  cGrPol       : comp,    // Ссылка на организацию-грузополучатель
  cGrOtp       : comp,    // Ссылка на организацию-грузоотправителя
  cVal         : comp,    // Ссылка на валюту
  dFrom        : date,    // Отгрузить с
  dTo          : date     // Отгрузить по
  )
with Index
  (
  TmpDoc01 = Nrec(Unique, Surrogate, Journal),
  TmpDoc02 = cGrPol + cGrOtp + dFrom + dTo,
  TmpDoc03 = cGrPol + dFrom + dTo,
  TmpDoc04 = dTo(Desc)
  );

Table struct TmpSpDoc
  (
  Nrec         : tNRec,
  cHDR_PS      : comp,    // Ссылка на таблицу HDR_PS производственная спецификация
  cDoc         : comp,    // Ссылка на запись в таблице TmpDoc
  cVal         : comp,    // Ссылка на валюту
  PrMC         : word,    // Признак МЦ/услуг
  cMCUsl       : tNRec,   // Ссылка на каталог МЦ/услуг
  cOtpEd       : tNRec,   // Ссылка на отпускную единицу измерения
  Kol          : Double,  // Количество
  Kol2         : Double,  // Количество2 (для договоров факт.)
  Kol3         : Double,  // Количество3
  Summa        : Double,  // Стоимость
  Summa2       : Double,  // Стоимость2 (для договоров факт.)
  Summa3       : Double,  // Стоимость3
  dPost        : date     // Рекомендуемая дата вставки
  )
with Index
  (
  TmpSpDoc01 = Nrec(Unique, Surrogate, Journal),
  TmpSpDoc02 = cDoc
  );
