#ifndef GAL7_12
table struct TmpPotrMK
  (
  nRec       : comp,
  tOwner     : Word         "Тип ресурса - контейнера",
  cOwner     : Comp         "Ресурс - контейнер",               // cIzd
  tResource  : Word         "Тип входящего ресурса",            // операция
  cResource  : Comp         "Входящий ресурс",                  //
  Rasx       : Double       "Норма расхода",                    // длительность
  cEd        : Comp         "Единица измерения",                //
  OnQnt      : Double       "На какое кол-во",
  InEd       : Comp         "В каких единицах",
  wLevel     : Integer      "уровень вхождения",                //
  tDoc       : Word         "Тип документа",
  cDoc       : Comp         "Документ",                         //
  tObject    : Word         "Тип объекта",                      // перекрывающая операция
  cObject    : Comp         "Объект - владелец ресурса",        //
  Rasx1      : double,                                          // длительность
  cEd1       : comp,
  tDep       : Word         "Тип потребителя",
  cDep       : Comp         "потребитель",                      //
  tSrcRec    : Word         "тип исходной записи",
  cSrcRec    : Comp         "исходная запись",                  //
  StZat      : Comp         "Ссылка на статью затрат",
  dTime      : Double       "Длительность операции",            // время сдвига
  dMPQnt     : double       "Размер передаточной партии",       // размер передаточной партии
  cParOwner  : tNrec        "ссылка на группу параметров",
  cTmpPotrMK : Comp         "ссылка на верхний уровень",
  wNum       : word,
  wNum2      : word,
  wNNum      : word,
  wNNum2     : word,
  dtBeg      : date,
  dtEnd      : date
  )
with index
  (
  TmpPotrMK01 = nRec(Unique, Surrogate),
  TmpPotrMK02 = cTmpPotrMK + tOwner + cOwner + tSrcRec + cSrcRec,
  TmpPotrMK03 = cTmpPotrMK + wLevel + wNum + wNum2 + wNNum + wNNum2,
  TmpPotrMK04 = tResource + cResource + tObject + cObject,
  TmpPotrMK05 = tObject + cObject + tResource + cResource
  )
;
#end

