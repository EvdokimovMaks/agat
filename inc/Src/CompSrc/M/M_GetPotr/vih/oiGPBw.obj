#ifndef __OIGPBW_VIH
#define __OIGPBW_VIH

#include oiGPSrv01.obj // установка/получение параметров расчета
#include oiGPSrv02.obj // наследование параметров расчета

#include oiHistXC.vih  // проверка по извещениям
#include oiGetVal.vih  // получение параметров объектов модуля

#ifdef ComponentVersion
#component "M_GetPotr"
#end

ObjInterface oiGPBw; forward;

#doc
Объектный интерфейс "расчет потребностей: получение вхождений ресурсов в объекты
по документам"</brief><br>
#end
ObjInterface oiGPBw;

//****************************************************************************
#doc
  формирование списка документов, куда входит ресурс</brief><br>
<PRE>
  Параметры:
    wObjType, cObject - ссылка на ресурс (обязательные параметры)
    wDocType = 0 - всех типов: cgKAU_KatMarsh, cgKAU_HDR_KS, cgKAU_HDR_PS,
                               cgKAU_KatCompl
    cDoc - документ с типом wDocType (игнорируется, если wDocType = 0)
    wProdType - в каком качестве входит объект: 0 - норма, 1 - выход,
                                                2 - все направления
    wDepth - глубина разузлования (пока 0 - нулевой, >0 - все уровни)
</PRE>
#end
  procedure ObjPotrList(_wObjType: word; _cObject: comp; _wDocType: word;
                        _cDoc: comp; _wProdType: word; _wDepth: word);

//******************************************************************************
#doc
реализация получения вхождений ресурсов в объекты по наборам</brief>
#end
  function GetGPBwMS: oiGPBw;

#doc
реализация получения вхождений ресурсов в объекты по спецификациям</brief>
#end
  function GetGPBwPS: oiGPBw;

#doc
реализация получения вхождений ресурсов в объекты по маршрутам</brief>
#end
  function GetGPBwTM: oiGPBw;

end; // oiGPBw

#endif  // __OIGPBW_VIH