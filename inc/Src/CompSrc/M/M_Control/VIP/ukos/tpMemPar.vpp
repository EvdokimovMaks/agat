Table Struct tpParCalc
  (
  wWhat     : word,   // что cgWhat_Izg - изготовитель;
                      //     cgWhat_Uni - вид сумм (cgVidSmet_Uni...)
                      //     cgWhat_StZtr - статьи затрат
                      //     cgWhat_StZtrNo - исключаемые статьи затрат
  wPar      : word,   // тип (подр. или орган.)
  cPar      : tNRec   // ссылка на сущность
  )
with Index
  (
   tpParCalc = wWhat + cPar + wPar
  );

// Таблица в памяти для протоколирования результатов
// автоформирования калькуляционных документов
Table struct tpProtFormFD
(
  sInfo: string,
  wType: word      //wType = 0 - сообшение об удачном завершении автоформирования
)                  //      = 1 - ошибка
with Index
(
  tpProtFormFD01 = wType
)
;
