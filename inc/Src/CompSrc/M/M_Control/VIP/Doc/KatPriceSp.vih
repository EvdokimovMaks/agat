ObjInterface oKatPriceSp;
event procedure CloseKatPriceSp(gcResPrice : comp);
event procedure SetTitlePrice(gTitle : string);
procedure SetMode(gMode : word; gcResPrice : comp; gcpTypPrice : comp; gPickList : word);
end;
VipInterface iKatPriceSp implements oKatPriceSp #Licensed_Free
  Parameters
  (
    Mode : word;       // 0 - вызов из меню (редактирование)
                       // 1 - режим выбора
                       // 2 - множественный выбор
                       // 3 - множественный выбор по типу заданному в cpTypPrice
                       // 4 - открывает редактирование настройки расчета цен без последующего выхода в каталог цен
                       // 5 - открывает редактирование настройки расчета цен с последующим выходом в каталог цен
                       // 11 - режим выбора из интерфейса РАСЧЕТ ЦЕН(iCalcPrice)
                       // 12 - режим выбора из интерфейса ОТЧЕТ ПО ЦЕНАМ(iPriceOutpk)
    cResPrice: comp;
    cpTypPrice: comp;
    PickList : word   //wList таблицы Pick, если = 1, пометка в таблице UserDeskRep
  )
;
