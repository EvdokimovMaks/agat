Table struct MTKoeffs
(
  cKoeff   : comp
, wTip     : word
, wPrim    : word
, wDeystv  : word
, Val      : double
, wVidRab  : word
, wGlava   : word
, cPos     : comp
, cChapter : comp
, wChapter : word
, sFormula : string
, cRec     : comp
, cUsl     : comp
, bNewUsl  : boolean
, wLevel   : word
)
With index
(
  MTKoeffs01 = wVidRab
, MTKoeffs02 = wGlava + wChapter
, MTKoeffs03 = cPos
, MTKoeffs04 = cChapter
, MTKoeffs05 = cRec
, MTKoeffs06 = wDeystv + bNewUsl
)
;

