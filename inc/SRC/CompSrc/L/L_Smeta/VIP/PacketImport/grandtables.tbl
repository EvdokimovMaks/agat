Table struct MTPosQuantity
(
  cRec    : comp
, cPos    : comp
, sIdent  : string[50]
, Formula : string
, bCalc   : boolean
, fVol    : double
)
With index
(
  MTPosQuantity01 = cRec + bCalc + sIdent
, MTPosQuantity02 = cPos
)
;

