// по признаку
Bounds ByKons       =  pFlt.Kons     == KatParty.Kons(NoIndex)

//------------------------------------------------------------------------------
// по матценности
Bounds ByMC         =  pFlt.cMC      == KatParty.cMC(NoIndex)

//------------------------------------------------------------------------------
// по группе партий
Bounds ByGroup      =  pFlt.cGroup   == KatParty.cGroupParty(NoIndex)

//------------------------------------------------------------------------------
// по организации
Bounds ByOrg        =  pFlt.cOrg     == KatParty.cOrgPar(NoIndex)

//------------------------------------------------------------------------------
Bounds ByCrDate     =  pFlt.bCrDate <<= KatParty.CreateDateTime AND
                       pFlt.eCrDate >>= KatParty.CreateDateTime(NoIndex)

//------------------------------------------------------------------------------
// по архивности
Bounds ByArch       =  pFlt.Arch     == KatParty.isArch(NoIndex)

