Table struct ArgCalcStBud
(
  cRec                 : comp,
  cArg                 : comp,
  sErr                 : string
)
with index
(
  ArgCalcStBud01 = cRec + cArg,
  ArgCalcStBud02 = cArg + cRec
);
//------------------------------------------------------------------------------
Table struct CopyRel
(
  cOld                : comp       "cOld",
  cNew                : comp       "cNew"
)
with index
(
  CopyRel01 = cOld + cNew,
  CopyRel02 = cNew + cOld
);
