//******************************************************************************
// EMAIL АЛГОРИТМЫ

//------------------------------------------------------------------------------
Type TEMailInfo = record
  sNote     : string;
  sTo       : string;
  sCopy     : string;
  sSubject  : string;
  Priority  : integer;
end;

//------------------------------------------------------------------------------
// Email - алгоритмы формирования содержимого
Table struct TblEmailAlg
(
  AlgID : comp,
  Attr  : word,
  Npp   : word,
  Alg   : s200
)
With Index
(
  TblEmailAlg01 = AlgID (Unique, Surrogate),
  TblEmailAlg02 = Npp
);

//------------------------------------------------------------------------------
// Email - формирования информации из типовой формы
Table struct TblEmailTF
(
  Npp     : word,
  Vis     : boolean,
  Lev     : word,
  iAn     : word,
  wAn     : array[1..10] of word,
  cAn     : array[1..10] of comp,
  Summa   : double
)
With Index
(
  TblEmailTF01 = Npp,
  TblEmailTF02 = 
  wAn[1 ] + cAn[1 ]
+ wAn[2 ] + cAn[2 ]
+ wAn[3 ] + cAn[3 ]
+ wAn[4 ] + cAn[4 ]
+ wAn[5 ] + cAn[5 ]
+ wAn[6 ] + cAn[6 ]
+ wAn[7 ] + cAn[7 ]
+ wAn[8 ] + cAn[8 ]
+ wAn[9 ] + cAn[9 ]
+ wAn[10] + cAn[10]
);

//------------------------------------------------------------------------------
// Email - содержимое
Table struct TblEmailBody
(
  Npp  : word,
  Body : string
)
With Index
(
  TblEmailBody01 = Npp
);

