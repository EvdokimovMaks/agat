//------------------------------------------------------------------------------
// измерения 
Table struct TblDim
(
  wAn       : word,
  cAn       : comp,
  cNode     : comp,
  LevelCode : s20
)
with index
(
  TblDim01 = wAn + cAn,
  TblDim02 = wAn + cNode + LevelCode
