  _Loop TablDocOpl
  {
    if  (TablDocOpl.sNum = '')
    and (TablDocOpl.dDat = lc_dEmpty )
    { Continue; }

    var xmlNodePDoc : TPtr;  xmlNodePDoc := pXML.CreateNode(xmlDoc, #(_Node), #(_Doc));
