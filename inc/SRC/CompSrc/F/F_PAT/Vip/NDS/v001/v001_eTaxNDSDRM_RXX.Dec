    if (wLength > lc_MaxLengthGTD)
    {
      FpLog('mSaveDataDocGTD02: (GTD>)'+sGTDAttr);
      Break;
    }

    Npp++;
    MemoryStream_Write(pMS, sGTDAttr);
  } //_Loop TablDocGTD
  if (Npp > 0)
    XMLDOMElement_SetAttributeEx(#(_Node), #(_Attr), pMS);
  MemoryStream_Done(pMS);
