//------------------------------------------------------------------------------
Table struct MTArrNM
(
  Arr : string[50]  // Наименование массива
)
With Index
(
  MTArrNM01 = Arr
);
//------------------------------------------------------------------------------
Table struct MTDBTbls
(
  Tbl : string[50]  // Наименование таблицы
, Npp : LongInt     // порядковый номер таблицы
, Row : LongInt     // записей во всех предыдущих таблицах
)
With Index
(
  MTDBTbls01 = Tbl
, MTDBTbls02 = Npp
);
//------------------------------------------------------------------------------
Table struct MTDBTblFld
(
  NRec    : comp
, Tbl     : string[50]
, Fld     : string[50]
, Arr     : string[50]
, Npp     : LongInt
, FType   : word
, Comment : string
, sValue  : string
, dValue  : double
, dtValue : date
)
With Index
(
  MTDBTblFld00 = NRec(Unique, AutoInc)
, MTDBTblFld01 = Tbl + Fld
, MTDBTblFld02 = Tbl + Npp
, MTDBTblFld03 = Tbl + Arr
);
//------------------------------------------------------------------------------
Table struct MTDBTblStrFld
(
  cTblFld   : comp
, Npp       : word
, sValue    : string
)
With Index
(
  MTDBTblStrFld01 = cTblFld + Npp
);
//------------------------------------------------------------------------------
Table struct MTDBTblComFld
(
  cTblFld   : comp
, Npp       : word
, sValue    : string
)
With Index
(
  MTDBTblComFld01 = cTblFld + Npp
);

//------------------------------------------------------------------------------
Table struct MTDBRangeVar
(
  NRec    : comp
, sRange  : string
, Npp     : LongInt
, R1      : LongInt
, C1      : LongInt
, R2      : LongInt
, C2      : LongInt
)
With Index
(
  MTDBRangeVar00 = NRec(Unique, AutoInc)
, MTDBRangeVar01 = sRange + Npp
);
