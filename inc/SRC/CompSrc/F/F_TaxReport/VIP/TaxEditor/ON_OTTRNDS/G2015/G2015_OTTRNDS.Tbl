//------------------------------------------------------------------------------
// пустая таблица чтоб TableEvent работал для Доп разделов
Table Struct DRMEmptyTbl ( NRec : Comp );


//------------------------------------------------------------------------------
// список номеров граф, содержащих ошибку
Table struct TablGrafErr
(
  NRec  : comp     // NRec
, Npp   : LongInt  // порядковый номер
, sGraf : string   // номер графы
)
With Index
(
  TablGrafErr01 = NRec(Unique, AutoInc)
, TablGrafErr02 = Npp
);

//------------------------------------------------------------------------------
// список атрибутов "Документов оплаты"
Table struct TablDocOpl
(
  NRec  : comp     // NRec
, wTPM  : word     // режим требование или пояснение
, Npp   : LongInt  // порядковый номер
, sNum  : string   // номер документа
, dDat  : date     // дата  документа
)
With Index
(
  TablDocOpl01 = NRec(Unique, AutoInc)
, TablDocOpl02 = wTPM + Npp
);
