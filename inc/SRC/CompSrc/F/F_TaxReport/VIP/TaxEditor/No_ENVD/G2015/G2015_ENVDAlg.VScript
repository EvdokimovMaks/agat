// Действия выполняемые при проверке корректности документа
@Script On_Check : boolean;
  #include AllTaxObj.Vih

  function IsValidKPP_dop(strIn: string; var strGetMes: string) : boolean;
  begin
    //КПП
    strGetMes := 'В значении элемента КПП 5 и 6 знаки должны быть равны 35 или 77';

    Result := False;
    Result := ((SubStr(strIn, 5, 2) = '35') or (SubStr(strIn, 5, 2) = '77'));
  end;

  function IsValidPeriod(strIn: string; var strGetMes: string) : boolean;
  begin
    //Налоговый период
    //Период
    strGetMes := 'Возможные значения:  21, 22, 23, 24, 51, 52, 53, 54';

    Result := False;
    Result :=
    (
         (strIn = '21') or (strIn = '22') or (strIn = '23') or (strIn = '24')
      or (strIn = '51') or (strIn = '52') or (strIn = '53') or (strIn = '54')
    );
  end;

  function IsValidNalStav(strIn: string; var strGetMes: string) : boolean;
  begin
    //Налоговая ставка
    //НалСтавка
    strGetMes := 'Формат поля: X.XXX';
    Result := False;
    Result := CheckError.isRegExpr('^[1-9]{1}$', strIn)
              or CheckError.isRegExpr('^[0-9]{1}\.[0-9]{0,3}$', strIn);
  end;

   function IsValidKod(strIn: string; var strGetMes: string) : boolean;
  begin
    strGetMes := 'Формат поля: 2 символа';
    Result := False;
    Result :=    Length(strIn) =  0
              or Length(strIn) =  2;
  end;

  function Visok : boolean;
  begin
    var _Year : integer;
    _Year := Year(StrToDate(GetPatVal('&НачРасч'),'DD.MM.YYYY'));

    if (_Year Mod 4) = 0
      if (_Year Mod 100) = 0
        if (_Year Mod 400) = 0
        then Result := true;
        else Result := false;
      else Result := true;
    else Result := false;
  end;

  function IsValidDay(strIn: double; var strGetMes: string; inpMonth: byte) : boolean;
  begin
    var _Month, _Max : byte;
    _Month := Month(StrToDate(GetPatVal('&НачРасч'),'DD.MM.YYYY'));

    _Max := 31;
    inpMonth--;

    case _Month + inpMonth of
      2  : _Max := if (Visok, 29, 28); // Февраль

      4                // Апрель
    , 6                // Июнь
    , 7                // Июль
    , 9                // Сентябрь
    , 11 : _Max := 30; // Ноябрь

      1                // Январь
    , 3                // Март
    , 5                // Май
    , 8                // Август
    , 10               // Октябрь
    , 12 : _Max := 31; // Декабрь
    end;

    strGetMes := 'Поле не может быть меньше 1 и больше ' + String(_Max);
    Result := False;
    Result :=     strIn >=  1
              and strIn <= _Max;
  end;

 #declare _InsMes(_AdrXML, _Pole, _StrMes)
    MessageErrorStop_ALG
    (
      #_AdrXML,
      NameStr,
      #_Pole,
      #_StrMes
    );
  #end

  #declare _NoKor(_AdrXML, _Pole)
    MessageErrorStop_ALG
    (
      #_AdrXML,
      NameStr,
      #_Pole,
      'Поле не соответствует формату. ' + getMes
    );
  #end

  #declare _NoTek(_AdrXML, _Pole)
    if GetStrVal(#_AdrXML) <> ''
      MessageErrorStop_ALG
      (
        #_AdrXML,
        NameStr,
        #_Pole,
        'При текущих данных поле НЕ должно быть заполнено. Очистите поле или измените данные'
      );
  #end

  #declare _YesTek(_AdrXML, _Pole)
  if GetStrNull(#_AdrXML)
    MessageErrorStop_ALG
    (
      #_AdrXML,
      NameStr,
      #_Pole,
      'Поле обязательно к заполнению'
    );
  #end

  #declare _AlwNeed(_AdrXML, _Pole)
  if GetStrNull(#_AdrXML)
    MessageErrorStop_ALG
    (
      #_AdrXML,
      NameStr,
      #_Pole,
      'Обязательное поле (обязательное расчетное поле будет рассчитано в алгоритме, при наличии необходимых данных)'
    );
 #end

@begin
   var i,j : comp;
   var NameStr, mNalBaza, mSumNalIsch, vNalBaza, vSumNalIsch, vSumNalIschOb, mSumNalIschOb, mNalPYRasch, vNalPYRasch, mNalPY,
       vNalPY, aNalBazaMes1, aNalBazaMes2, aNalBazaMes3, aNalBaza, aSumNalIsch, aSumNalIschOb, aPriznakNP, sPriznakNP, aNalPY,
       aSumSVYm, aSumCV_IP, aNalPYRasch , getMes, aKolDnMes1, aKolDnMes2,aKolDnMes3  :string;
   var dNalBazaMes1, dNalBazaMes2, dNalBazaMes3, dNalBaza, dSumNalIsch, SumNal, dSumNalIschOb, dSumSVYm, dSumCV_IP,
       dNalPYRasch, dNalPY  :double;
   {
    NameStr := pFH.Func('myGetPage_Title');
    if not IsValidKND(GetStrVal('Файл/Документ/КНД'), '1152016', getMes)
      #_NoKor('Файл/Документ/КНД', 'Код налоговой декларации');
    if not GetStrNull('Файл/Документ/ДатаДок')
    {
      if not IsValidDate(GetStrVal('Файл/Документ/ДатаДок'), getMes)
        #_NoKor('Файл/Документ/ДатаДок', 'Дата документа')
    }
    else  #_YesTek('Файл/Документ/ДатаДок', 'Дата документа')

    if not IsValidPeriod(GetStrVal('Файл/Документ/Период'), getMes)
      #_NoKor('Файл/Документ/Период', 'Налоговый период');

    if not IsValidOtchGod(GetStrVal('Файл/Документ/ОтчетГод'), getMes)
      #_NoKor('Файл/Документ/ОтчетГод', 'Отчетный год');

    if not IsValidSONO(GetStrVal('Файл/Документ/КодНО'), getMes)
      #_NoKor('Файл/Документ/КодНО', 'Код налогового органа');

    if not IsValidNomKorr(GetStrVal('Файл/Документ/НомКорр'), getMes)
      #_NoKor('Файл/Документ/НомКорр', 'Номер корректировки');

    if not IsValidOKVED(GetStrVal('Файл/Документ/СвНП/ОКВЭД'), getMes)
      #_NoKor('Файл/Документ/СвНП/ОКВЭД', 'ОКВЭД');

    if not GetStrNull('Файл/Документ/СвНП/Тлф')
      if not IsValidTlf(GetStrVal('Файл/Документ/СвНП/Тлф'), getMes)
        #_NoKor('Файл/Документ/СвНП/Тлф', 'Контактный телефон');

    if not IsValidNaimOrg(GetStrVal('Файл/Документ/СвНП/НПЮЛ/НаимОрг'), getMes)
      #_NoKor('Файл/Документ/СвНП/НПЮЛ/НаимОрг', 'Наименование организации');

    if not IsValidINNUL(GetStrVal('Файл/Документ/СвНП/НПЮЛ/ИННЮЛ'), getMes)
      #_NoKor('Файл/Документ/СвНП/НПЮЛ/ИННЮЛ', 'ИНН');
    if not CheckError.Prov_INN(GetStrVal('Файл/Документ/СвНП/НПЮЛ/ИННЮЛ'), getMes)
      #_NoKor('Файл/Документ/СвНП/НПЮЛ/ИННЮЛ', 'ИНН');

    if not IsValidKPP(GetStrVal('Файл/Документ/СвНП/НПЮЛ/КПП'), getMes)
      #_NoKor('Файл/Документ/СвНП/НПЮЛ/КПП', 'КПП');
    if not IsValidKPP_dop(GetStrVal('Файл/Документ/СвНП/НПЮЛ/КПП'), getMes)
      #_NoKor('Файл/Документ/СвНП/НПЮЛ/КПП', 'КПП');

    if not IsValidPrPodp(GetStrVal('Файл/Документ/Подписант/ПрПодп'), getMes)
      #_NoKor('Файл/Документ/Подписант/ПрПодп', 'Признак подписанта');

    if not IsValidFIO(GetStrVal('Файл/Документ/Подписант/ФИО/Фамилия'), getMes)
      #_NoKor('Файл/Документ/Подписант/ФИО/Фамилия', 'Фамилия');

    if not IsValidFIO(GetStrVal('Файл/Документ/Подписант/ФИО/Имя'), getMes)
      #_NoKor('Файл/Документ/Подписант/ФИО/Имя', 'Имя');

    if not GetStrNull('Файл/Документ/Подписант/ФИО/Отчество')
      if not IsValidFIO(GetStrVal('Файл/Документ/Подписант/ФИО/Отчество'), getMes)
        #_NoKor('Файл/Документ/Подписант/ФИО/Отчество', 'Отчество');

    if GetStrVal('Файл/Документ/Подписант/ПрПодп') = '2'
    {
      #_AlwNeed('Файл/Документ/Подписант/СвПред/НаимДок', 'Наименование документа');
      if not GetStrNull('Файл/Документ/Подписант/СвПред/НаимОрг')
        if not IsValidNaimOrg(GetStrVal('Файл/Документ/Подписант/СвПред/НаимОрг'), getMes)
          #_NoKor('Файл/Документ/Подписант/СвПред/НаимОрг', 'Наименование организации');
    }
    else
    {
      #_NoTek('Файл/Документ/Подписант/СвПред/НаимДок', 'Наименование документов');
      #_NoTek('Файл/Документ/Подписант/СвПред/НаимОрг', 'Наименование организации');
    }
  }
  {
    NameStr := pFH.Func('myGetPage_R3');
    aSumNalIschOb := 'Файл/Документ/ЕНВД/СумНалПУ/СумНалИсчислОбщ';  dSumNalIschOb:= GetDblVal(aSumNalIschOb);
    aPriznakNP    := 'Файл/Документ/ЕНВД/СумНалПУ/ПризнакНП';        sPriznakNP   := GetStrVal(aPriznakNP);
    aSumSVYm      := 'Файл/Документ/ЕНВД/СумНалПУ/СумСВУм346.32.2';  dSumSVYm     := GetDblVal(aSumSVYm);
    aSumCV_IP     := 'Файл/Документ/ЕНВД/СумНалПУ/СумСВ_ИП';         dSumCV_IP    := GetDblVal(aSumCV_IP );
    aNalPYRasch   := 'Файл/Документ/ЕНВД/СумНалПУ/НалПУРасч';        dNalPYRasch  := GetDblVal(aNalPYRasch);
    if sPriznakNP = '1'
    {
      if (dSumCV_IP <>0)
        #_NoTek(aSumCV_IP,'Стр.030');
      if dNalPYRasch <(dSumNalIschOb*50/100)
        #_InsMes(aNalPYRasch,'Стр. 040','Строка должна быть больше или равно 50% стр.010');
    }
    else
    {
      if (dSumSVYm  <>0)
        #_NoTek(aSumSVYm ,'Стр.020');
      if dNalPYRasch <0
        #_InsMes(aNalPYRasch,'Стр. 040','Строка должна быть больше или равно 0');
    }
  }
  {
    for (i :=0; i<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД');i++  )
    {
      if (GetFldVis('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)))
      {
        NameStr := pFH.Func('myGetPage_R1', i+1);
        if not GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/ОКТМО')
        {
          if  not IsValidOKTMO (GetStrVal('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/ОКТМО'), getMes)
            #_NoKor('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/ОКТМО', 'Стр. 010')
        }
        else
          #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/ОКТМО', 'Стр. 010');
        for (j :=0; j<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД');j++  )
        {
          if (GetFldVis('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)))
          {
            NameStr := pFH.Func('myGetPage_R2', i+1, j+1);
            aKolDnMes1 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес1';
            aKolDnMes2 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес2';
            aKolDnMes3 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес3';

            if not GetStrNull(aKolDnMes1) if not IsValidDay(GetDblVal(aKolDnMes1), getMes, 1) #_NoKor(aKolDnMes1, 'Стр. 070 гр.3');
            if not GetStrNull(aKolDnMes2) if not IsValidDay(GetDblVal(aKolDnMes2), getMes, 2) #_NoKor(aKolDnMes2, 'Стр. 080 гр.3');
            if not GetStrNull(aKolDnMes3) if not IsValidDay(GetDblVal(aKolDnMes3), getMes, 3) #_NoKor(aKolDnMes3, 'Стр. 090 гр.3');

            if GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/КодВД')
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/КодВД', 'Стр. 010');

            if GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/АдрПредДеят/КодРегион')
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/АдрПредДеят/КодРегион', 'Код региона')

            if GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/БазДоход')
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/БазДоход', 'Стр. 040');

            if not GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К1')
            {
              if  not IsValidNalStav(GetStrVal('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К1'), getMes)
                #_NoKor('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К1', 'Стр. 050')
            }
            else
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К1', 'Стр. 050');

            if not GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К2')
            {
              if  not IsValidNalStav(GetStrVal('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К2'), getMes)
                #_NoKor('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К2', 'Стр. 060')
            }
            else
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К2', 'Стр. 060');

            if GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБаза')
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБаза', 'Стр. 100');

            if GetStrNull('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/СумНалИсчисл')
              #_YesTek('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/СумНалИсчисл', 'Стр. 110');
          }
        }
      }
    }
  }

  /*********/

@end. // On_Check

//------------------------------------------------------------------------------------------------------------
// Действия выполняемые при расчете документа
@Script On_Recalc : boolean;
  #declare _Log(_strAdr, _strMes, _strVal)
    MesError.InsertRasch(NameStr, #_strAdr, #_strMes, #_strVal, 0);
  #end

  #declare _SetFld(_fld, _val)
    SetFldVal(#_fld, #_val)
  #end

  #declare GD0(_val)
    IF (
         #_val < 0,
        '('+DoubleToStr(Round(#_val), '[|-]36666666666666666666666666')+')',
            DoubleToStr(Round(#_val), '[|-]36666666666666666666666666')
       )
  #end

  #declare GD3(_val)
    IF (
         #_val < 0,
        '('+DoubleToStr(Round(#_val, 3), '[|-]36666666666666666666666666~999')+')',
            DoubleToStr(Round(#_val, 3), '[|-]36666666666666666666666666~999')
       )
  #end
  #declare SetDbl0(_fld, _val)
    SetFldVal(#_fld, DoubleToStr(Round(#_val), '[|-]36666666666666666666666666'))
  #end

  #declare SetSNull(_fld)
    XMLMAP.SetIsNullAttrValueByName(#_fld, 2);
  #end

@begin
   var i,j : comp;
   var NameStr, mNalBaza, mSumNalIsch, vNalBaza, vSumNalIsch, vSumNalIschOb, mSumNalIschOb, mNalPYRasch, vNalPYRasch, mNalPY,
       vNalPY, aNalBazaMes1, aNalBazaMes2, aNalBazaMes3, aNalBaza, aSumNalIsch, aSumNalIschOb, aPriznakNP, sPriznakNP, aNalPY,
       aSumSVYm, aSumCV_IP, aNalPYRasch, vNalBazaMes1, vNalBazaMes2, vNalBazaMes3, mNalBazaMes1, mNalBazaMes2, mNalBazaMes3,
       aBazDox, aK1, aK2, aFizPokMes1, aFizPokMes2, aFizPokMes3, aKolDnMes1, aKolDnMes2, aKolDnMes3 :string;
   var dNalBazaMes1, dNalBazaMes2, dNalBazaMes3, dNalBaza, dSumNalIsch, SumNal, dSumNalIschOb, dSumSVYm, dSumCV_IP,
       dNalPYRasch, dNalPY,
       dBazDox, dK1, dK2, dFizPokMes1, dFizPokMes2, dFizPokMes3, dKolDnMes1, dKolDnMes2, dKolDnMes3 :double;
   aSumNalIschOb := 'Файл/Документ/ЕНВД/СумНалПУ/СумНалИсчислОбщ';
   aPriznakNP    := 'Файл/Документ/ЕНВД/СумНалПУ/ПризнакНП';        sPriznakNP := GetStrVal(aPriznakNP);
   aSumSVYm      := 'Файл/Документ/ЕНВД/СумНалПУ/СумСВУм346.32.2';  dSumSVYm   := GetDblVal(aSumSVYm);
   aSumCV_IP     := 'Файл/Документ/ЕНВД/СумНалПУ/СумСВ_ИП';         dSumCV_IP  := GetDblVal(aSumCV_IP );
   aNalPYRasch   := 'Файл/Документ/ЕНВД/СумНалПУ/НалПУРасч';
   if ((GetStrVal('Файл/Документ/ДатаДок') = '') or (GetStrVal('Файл/Документ/ДатаДок') = 'ДД.ММ.ГГГГ'))
    SetFldVal('Файл/Документ/ДатаДок', DateToStr(Cur_Date, XMLMap.GetAttrVFormatByName('Файл/Документ/ДатаДок')));
   mNalBaza := 'Стр.100 = Стр.070 гр.4 + Стр.080 гр.4 + Стр.090 гр.4';
   mSumNalIsch := 'Стр.110 = Стр.100 * 15 / 100';
   mSumNalIschOb := 'Стр.010 = Сумма(Стр.110) Раздела 2';
   mNalPY := 'Стр.020 = (стр. 040 Р 3 * (сумма стр. 110 всех Р2 по данному коду ОКТМО / стр.010 Р3))';
   mNalBazaMes1 := 'Стр.070 гр.4 = Стр.070 гр.2 * Стр.070 гр.3 * (Стр.040 * Стр.050 * Стр.060)';
   mNalBazaMes2 := 'Стр.080 гр.4 = Стр.080 гр.2 * Стр.080 гр.3 * (Стр.040 * Стр.050 * Стр.060)';
   mNalBazaMes3 := 'Стр.090 гр.4 = Стр.090 гр.2 * Стр.090 гр.3 * (Стр.040 * Стр.050 * Стр.060)';
   dSumNalIschOb := 0;
   for (i :=0; i<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД');i++  )
   {
     for (j :=0; j<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД');j++  )
     {
       NameStr := pFH.Func('myGetPage_R2', i+1, j+1);
       aBazDox      := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/БазДоход'    ; dBazDox     := GetDblVal(aBazDox);
       aK1          := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К1'          ; dK1         := GetDblVal(aK1    );
       aK2          := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/К2'          ; dK2         := GetDblVal(aK2    );
       aFizPokMes1  := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/ФизПокМес1'  ; dFizPokMes1 := GetDblVal(aFizPokMes1);
       aFizPokMes2  := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/ФизПокМес2'  ; dFizPokMes2 := GetDblVal(aFizPokMes2);
       aFizPokMes3  := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/ФизПокМес3'  ; dFizPokMes3 := GetDblVal(aFizPokMes3);
       aKolDnMes1   := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес1' ; dKolDnMes1  := GetDblVal(aKolDnMes1 );
       aKolDnMes2   := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес2' ; dKolDnMes2  := GetDblVal(aKolDnMes2 );
       aKolDnMes3   := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/КолДнейМес3' ; dKolDnMes3  := GetDblVal(aKolDnMes3 );
       aNalBazaMes1 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБазаМес1' ;
       aNalBazaMes2 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБазаМес2' ;
       aNalBazaMes3 := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБазаМес3' ;
       aNalBaza     := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/НалБаза'     ;
       aSumNalIsch  := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/СумНалИсчисл';

       dNalBazaMes1:= dFizPokMes1 * dKolDnMes1 *(dBazDox * dK1 * dK2);
       dNalBazaMes2:= dFizPokMes2 * dKolDnMes2 *(dBazDox * dK1 * dK2);
       dNalBazaMes3:= dFizPokMes3 * dKolDnMes3 *(dBazDox * dK1 * dK2);

       vNalBazaMes1:= #GD0(dNalBazaMes1)+' = '+#GD0(dFizPokMes1)+' * '+#GD0(dKolDnMes1)+' * ('+#GD0(dBazDox)+' * '+#GD3(dK1)+' * '+#GD3(dK2)+')';
       vNalBazaMes2:= #GD0(dNalBazaMes2)+' = '+#GD0(dFizPokMes2)+' * '+#GD0(dKolDnMes2)+' * ('+#GD0(dBazDox)+' * '+#GD3(dK1)+' * '+#GD3(dK2)+')';
       vNalBazaMes3:= #GD0(dNalBazaMes3)+' = '+#GD0(dFizPokMes3)+' * '+#GD0(dKolDnMes3)+' * ('+#GD0(dBazDox)+' * '+#GD3(dK1)+' * '+#GD3(dK2)+')';

       #SetDbl0(aNalBazaMes1, dNalBazaMes1);
       #SetDbl0(aNalBazaMes2, dNalBazaMes2);
       #SetDbl0(aNalBazaMes3, dNalBazaMes3);

       #_Log(aNalBazaMes1, mNalBazaMes1, vNalBazaMes1)
       #_Log(aNalBazaMes2, mNalBazaMes2, vNalBazaMes2)
       #_Log(aNalBazaMes3, mNalBazaMes3, vNalBazaMes3)

       dNalBaza := dNalBazaMes1 + dNalBazaMes2 + dNalBazaMes3;
       vNalBaza := #GD0(dNalBaza)+' = '+#GD0(dNalBazaMes1)+' + '+#GD0(dNalBazaMes2)+' + '+#GD0(dNalBazaMes3);
       #SetDbl0(aNalBaza, dNalBaza);
       #_Log(aNalBaza, mNalBaza, vNalBaza);

       dSumNalIsch := dNalBaza*15/100;
       vSumNalIsch := #GD0(dSumNalIsch)+' = '+#GD0(dNalBaza)+' * 15 / 100 ';
       #SetDbl0(aSumNalIsch, dSumNalIsch);
       #_Log(aSumNalIsch, mSumNalIsch, vSumNalIsch);
       dSumNalIschOb := dSumNalIschOb + Round(dSumNalIsch);
       vSumNalIschOb := vSumNalIschOb + '+' + #GD0(dSumNalIsch)
     }
   }
   vSumNalIschOb := Ltrim(vSumNalIschOb, '+');   if vSumNalIschOb = '' vSumNalIschOb := '0';
   vSumNalIschOb := #GD0(dSumNalIschOb)+' = '+vSumNalIschOb;
   NameStr := pFH.Func('myGetPage_R3');
   #SetDbl0(aSumNalIschOb, dSumNalIschOb);
   #_Log(aSumNalIschOb, mSumNalIschOb, vSumNalIschOb);
   if sPriznakNP = '1'
   {
     dNalPYRasch := dSumNalIschOb-dSumSVYm;
     vNalPYRasch := #GD0(dNalPYRasch) +' = '+#GD0(dSumNalIschOb)+' - '+ #GD0(dSumSVYm);
     mNalPYRasch := 'Стр.040 = Стр.010 - Стр.020'
   }
   else
   {
     dNalPYRasch := dSumNalIschOb-dSumCV_IP;
     vNalPYRasch := #GD0(dNalPYRasch) +' = '+#GD0(dSumNalIschOb)+' - '+ #GD0(dSumCV_IP);
     mNalPYRasch := 'Стр.040 = Стр.010 - Стр.030'
   }
   #SetDbl0(aNalPYRasch, dNalPYRasch);
   #_Log(aNalPYRasch, mNalPYRasch, vNalPYRasch);

   for (i :=0; i<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД');i++  )
   {
     aNalPY := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/НалПУ';
     dNalPY := 0;
     vNalPY := '';
     NameStr := pFH.Func('myGetPage_R1', i+1);
     for (j :=0; j<GetCountFld('Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД');j++  )
     {
       aSumNalIsch  := 'Файл/Документ/ЕНВД/СумНалПУВД/СумПУВД'+GetIter(i)+'/РасчНалВД'+GetIter(j)+'/РасчНалВДАдр/СумНалИсчисл';
       dSumNalIsch := GetDblVal(aSumNalIsch);
       dNalPY:= dNalPY + dSumNalIsch;
       vNalPY := vNalPY + '+' + #GD0(dSumNalIsch);
     }
     vNalPY := Ltrim(vNalPY, '+'); if vNalPY = '' vNalPY := '0';
     dNalPY := dNalPYRasch * (dNalPY / dSumNalIschOb);
     vNalPY := #GD0(dNalPY)+' = '+#GD0(dNalPYRasch)+' * (('+vNalPY+') / '+#GD0(dSumNalIschOb)+')';
     #SetDbl0(aNalPY, dNalPY);
     #_Log(aNalPY, mNalPY, vNalPY);
  }
@end. // On_Recalc

