#ifndef __ImuRNal_Tbl__
#define __ImuRNal_Tbl__

//==============================================================================
//#region Импорт имущества
//------------------------------------------------------------------------------
Table Struct tsXMLValue
(
  NRec            : Comp
, tOKTMO          : String  // Код ОКТМО
, tKBK            : String  // КБК
, tNomKadZdan     : String  // Кадастровый номер здания (строения, сооружения)                                     014
, tNomKadPom      : String  // Кадастровый номер помещения                                                         015
, tStImushhK      : TSumma  // Кадастровая стоимость на 1 января налогового периода                                020
, tStImushhNeoblK : TSumma  // в том числе необлагаемая налогом кадастровая стоимость                              025
, tKodNalLg       : String  // Код налоговой льготы                                                                040
, tDolSt          : String  // Доля стоимости объекта недвижимого имущества на территории субъекта РФ              050
, tKodLgPNS       : String  // Код налоговой льготы (установленной в виде понижения налоговой ставки)              070
, tNalStav        : TSumma  // Налоговая ставка (%)                                                                080
, tKojefK         : String  // Коэффициент К                                                                       090
, tKodLgUmen      : String  // Код налоговой льготы (в виде уменьшения суммы налога, подлежащей уплате в бюджет)   120
, tSumLgUmen      : TSumma  // Сумма налоговой льготы, уменьшающей сумму налога, подлежащую уплате в бюджет        130
, NaimRazd        : String  // Раздел, который образует запись
, AdrXML          : String  // XML Adres
, Old             : Boolean // Старая/новая запись
)
With Index
(
  tsXMLValue01 = NRec(Unique, Surrogate)
 ,tsXMLValue02 = tOKTMO + tKBK
 ,tsXMLValue03 = tNomKadZdan
 ,tsXMLValue04 = Old
 ,tsXMLValue05 = tOKTMO + tKBK + Old
);
