  KatmcNrec         : comp,
  OtpedNrec         : comp,
  Tu                : string,
  Description       : string,
  ClaimQty          : double,
  ClaimPrice        : double,
  SaldoQty          : double,
  RegradeQty        : double,
  BasedocQty        : double,
  BasedocSum        : double,
  PaidSum           : double,
  DeliveredQty      : double,
  IssuedQty         : double,
