#component "AGAT"

table struct tPlanOmto (
  ClaimNrec         : comp,
  IndentNrec        : comp,
  ClaimStateNrec    : comp,
  DeliverOrgNrec    : comp,
  KatstroyNrec      : comp,
  PersonNrec        : comp,
  DeviceNrec        : comp,
