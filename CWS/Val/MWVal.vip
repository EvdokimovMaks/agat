{
  var _ind: byte;
  _ind := GroupDeltas[fActiveGroupIndex]+_ShowedFieldIndex;
  if (getfirst tVF1 where ((fActiveGroupIndex == tVF1.GroupIndex and _ind == tVF1.FieldIndex)) = tsOk )
    result := MWValFieldsManager.GetFieldValue(Row, tVF1.nRec)
