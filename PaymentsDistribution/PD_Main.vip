table struct TmpData (
  Nrec   : comp,
  cParent: comp,
  Name   : string[80],
  Code   : string[20],
  Npp    : string[20],
  RowId  : longint
) with index (
  i01 = Nrec (unique, surrogate)
 ,i02 = cParent + Npp
);

var
  _context: PD_IContext;
  _cKatStroy: comp;
  _cPlPor: comp;
  _cParent: comp;

