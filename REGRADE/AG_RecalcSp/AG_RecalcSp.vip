cmDone:
  #include ModifSalDone.vpp // для корректной работы объекта ModifSal.vih

cmCheckField:
{
  case CurField of
    #needPickMC:
    {
      if (wDefault = 0)
        delete Pick where (( word(7) == Pick.wList ));

