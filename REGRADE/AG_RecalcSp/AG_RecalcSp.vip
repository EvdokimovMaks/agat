{
  var str_: string;
  case type_ of
    0: str_ := 'Процесс прерван пользователем.';
    1: str_ := 'Не найден запомненный ордер с Nrec ' + string(_cRecOrd);
    2: str_ := 'Ошибка в базе.';
  else
       str_ := '';
  end;//case

