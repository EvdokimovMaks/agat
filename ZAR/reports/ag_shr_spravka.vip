table struct tCatDep (
  Nrec     : comp,
  cParent  : comp,
  Code     : string[100],
  Name     : string,
  Qty      : double,
  Wrk      : double,
  QtyTotal : double,
  Salary   : double,
  BonusAll : double,
  BonusVred: double,
  BonusSekr: double
) with index (
  i00 = Nrec,
  i01 = cParent + Code
);

