create view
var
  _cCurDep: comp;
as select
  tCatDep.Nrec
from
  tCatDep
 ,tCatDep tCurDep
 ,tCatDep tChildDep
where ((
      _cCurDep == tCurDep.Nrec
  and _cCurDep == tChildDep.cParent
))
;

create view vRep
var
  _cCatDep: comp;
as select
  tCatDep.Nrec
from
  tCatDep tCatDepChild,
  tCatDep
where ((
  _cCatDep        == tCatDepChild.cParent and
  _cCatDep        == tCatDep.Nrec
));

