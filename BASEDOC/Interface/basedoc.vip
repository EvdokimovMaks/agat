      result := if (brbd.daybuh>3 or brbd.daydir>3 or brbd.daykaz>3,2,0);
    }
  }

  function isStatusVklVReestr(_statusNrec: comp): boolean;
  {
    result := _statusNrec = STATUS_VKL_V_REESTR or _statusNrec = STATUS_OPLACHEN;
  }

  function getPlatExistsFld: string;
  {
    result := if(getfirst fastfirstrow brbf = tsOk,
                 'П',
                 if(getfirst fastfirstrow brbf1 = tsOk, 'П', ''));
  }

  function isVisaSet(_visaValueNrec: comp): boolean;
  {
    result := _visaValueNrec = VIZA_SOGLASOVANO
           or _visaValueNrec = VIZA_NE_TREBUETSA
           or _visaValueNrec = VIZA_S_OBSHIH_SCHETOV;
  }

  function maxDateIn(d1: date; d2: date; d3: date = 0; d4: date = 0; d5: date = 0; d6: date = 0): date;
  {
    var d: date; d := 0;
    if (d1 > d) d := d1;
    if (d2 > d) d := d2;
    if (d3 > d) d := d3;
    if (d4 > d) d := d4;
    if (d5 > d) d := d5;
    if (d6 > d) d := d6;
    result := d;
  }

  function LastVizaDateExceptPEU: date; //функция возвращает дату последней проставленной визы
  {
    if (isVisaSet(brbd.cbuh) and
        isVisaSet(brbd.ckaz) and
        isVisaSet(brbd.cdir)) // все визы кроме ПЭУ есть
      result := maxDateIn(brbd.dbuh, brbd.dkaz, brbd.ddir)
    else
      result := 0;
  }

  function DaysFromLastVizaToVklVReestr: integer; //функция возвращает кол-во дней с последней визы до включения в реестр
  {
    var d1, d2: date;
    d1 := LastVizaDateExceptPEU;
    if d1 != 0
    {
      d2 := if(brbd.dvklree=0, cur_date, brbd.dvklree);

      var preres: integer;
      preres := CalcDaysBetweenDates(d1, d2, false) - 1;

      if preres < 0
        result := 0
      else
        result := preres;
    }
    else
    {
      result := 0;
    }
  }

  function DaysVklVReestrWithoutVizaPEU: integer; //функция возвращает кол-во дней с "в реестре" до даты визы пэу или до тек.даты, если виза не установлена
  {
      var d1, d2: date;
      d1 := brbd.dvklree;
      if (not isVisaSet(brbd.cpeu))
        d2 := if(brbd.cnote = STATUS_OPLACHEN, brbd.dopl, Cur_Date)
      else
        d2 := brbd.dpeu;
      result := if(d2 > d1 and d1 > 0, CalcDaysBetweenDates(d1, d2, false) - 1, 0);
  }

