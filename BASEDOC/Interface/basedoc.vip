        if getmarkercount(mrkVal) = 0 {
          insertmarker(mrkval,selval.nrec);
        }
        closewindow(wSelectVal);
      }
      cmDoMarkUnMark : {
        if foundmarker(mrkval,selval.nrec) {
          deletemarker(mrkval,selval.nrec);
        } else {
          insertmarker(mrkval,selval.nrec);
        }
