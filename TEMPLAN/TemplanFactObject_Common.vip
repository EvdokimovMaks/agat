procedure oTemplanSpecObject.OnLinkedCreate(buf: TemplanSpecType);
{
  var i: byte;
  for(i:=1; i<=12; i++)
  {
/*    if (buf.sum[i] <> 0)
        SetVal(i, GetVal(i)+buf.sum[i]);*/
    if (buf.sumfact[i] <> 0)
        SetVal(i, GetVal(i) + buf.sumFact[i]);
  }
  if (buf.sumSaldo <> 0) then
    {
      SetVal(0, GetVal(0) + buf.sumSaldo);
    }
}

