function oTemplanSpecObject.InitObject(aBuf: TemplanSpecType; aIsNew: boolean): boolean;
{
  _buf := aBuf;
  _oldbuf := aBuf;
  _isNew := aIsNew;
  _isModified := false;
  _isRemoved := false;
  result := _isNew or (getfirst tTemplanSpec where (( _buf.Nrec == tTemplanSpec.Nrec )) = tsOk);
}

