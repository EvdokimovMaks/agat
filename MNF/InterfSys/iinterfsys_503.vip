Function InitInter (pGldt: GLOBDATA; piOm: oMainVid): Boolean;
{
  gldt   := pGldt;
  iom    := piOm;
  result := true;
}

function ipwsInit: boolean;
{
  result := false;
  StartNewVisual(vtRotateVisual,vfTimer,'Загрузка',0);
  if(getfirst mnplan = tsOk)
  {
    result := ipws.InitInterface(mnplan.nrec);
    ipws.ReloadHeader;
    ipws.RecalcBalanceHoursPlan;
  }
  StopVisual('', 0);
}

function ipwsDone: boolean;
{
  StartNewVisual(vtRotateVisual,vfTimer,'Сохранение изменений',0);
  result := ipws.DoneInterface;
  StopVisual('',0);
}

procedure OnPrint(reportKind: byte);
{
  reportKind := reportKind;
  if ipwsDone
  {
    ipwsInit;
  }
}

Function DoneInter: Boolean;
{
  result := ipwsDone;
  if (Not NullVipRef(gldt))
    FreeVipInterface(gldt);
}

Function SetOwner (ccMnPlan: Comp): Boolean;
{
  cCurMnPlan := ccMnPlan;
  if (getfirst  mnplan != tsOk)
  {
    message(''#3'iInterfSys_503.SetOwner: Ошибка установки курсора на документ', Error);
    Result := false;
    exit;
  }
  result := ipwsInit;
  rereadrecord;
}

