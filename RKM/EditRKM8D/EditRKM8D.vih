#ifndef __editrkm8d__
#define __editrkm8d__

#component "AGAT"

//основная таблица с данными для редактирования форм ркм 3Д-7Д
table struct trkm8d (
  Nrec          : comp,
  ParentNrec    : comp,
  SpmnplanNrec  : comp,
  ObjNrec       : comp,
  ObjName       : string,
  BaseHourCost  : double,
  BaseSum       : double,
  TotalLaborBase: double,
  NoveltyCoeff  : double,
  DiffCoeff     : double,
  TotalLabor    : double,
  TotalSum      : double,
  Labor         : array[1..10] of double,
  Coeff         : array[1..10] of double,
  Sum           : array[1..10] of double
) with index (
  i00 = Nrec (unique, surrogate),
  i01 = ParentNrec,
  i02 = SpmnplanNrec
);

table struct trkm8dProfs (
  Nrec          : comp,
  rkm8dNrec     : comp,
  SpmnplanNrec  : comp,
  ProfNrec      : comp,
  Coeff         : double,
  Qty           : double,
  TotalLabor    : double,
  Labor         : array[1..10] of double
) with index (
  i01 = Nrec (unique, surrogate),
  i02 = rkm8dNrec,
  i03 = SpmnplanNrec
);

type ttrkm8d = record as table trkm8d;
type ttrkm8dProfs = record as table trkm8dProfs;

const
  RKM_MAX_YEARS     = 10;    //максимальное количество лет, поддерживающееся для редактирования в интерфейсе
  KODGRKAU_PERIOD   = 21;    //код аналитики "Период планирования"
  KODGRKAU_PP       = 28;    //код аналитики "Планы производства"
  VID_PERIOD        = 1;     //системное представление "Период"
  VID_PP            = 24;    //системное представление "План производства"
end;

//интерфейс редактирования форм ркм 3д-7д
objinterface IEditRKM8D;
  procedure InitInterface(aYearStart: word; aYearEnd: word; aBaseYear: word);
  procedure Load(aMnplanNrec: comp);
  procedure Save(aMnplanNrec: comp; aFptperNrec: comp);
  event procedure OnPrint(reportKind: byte);
end;

vipinterface EditRKM8D implements IEditRKM8D;


#end
